@{
    ViewData["Title"] = "Notifications";
    Layout = "_AuditorLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Notifications</h4>
    </div>
    <a href="#" class="btn btn-outline-secondary">
        <i class="bi bi-check-all"></i> Mark All as Read
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a href="#" class="list-group-item list-group-item-action bg-light">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                        <strong>Documents Expiring Soon</strong>
                    </div>
                    <small class="text-muted">1 hour ago</small>
                </div>
                <p class="mb-0 text-muted">5 documents will expire within 30 days</p>
            </a>
            <a href="#" class="list-group-item list-group-item-action bg-light">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-file-earmark-bar-graph text-primary me-2"></i>
                        <strong>Report Generated</strong>
                    </div>
                    <small class="text-muted">2 hours ago</small>
                </div>
                <p class="mb-0 text-muted">Compliance Report Q1 2024 is ready</p>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-shield-check text-success me-2"></i>
                        <strong>Compliance Check Complete</strong>
                    </div>
                    <small class="text-muted">1 day ago</small>
                </div>
                <p class="mb-0 text-muted">Weekly compliance check completed successfully</p>
            </a>
        </div>
    </div>
</div>
