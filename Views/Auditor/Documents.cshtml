@{
    ViewData["Title"] = "Documents";
    Layout = "_AuditorLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Documents</h4>
        <p class="text-muted mb-0">View all documents (read-only)</p>
    </div>
    <a href="#" class="btn btn-outline-primary">
        <i class="bi bi-download"></i> Export List
    </a>
</div>

<div class="card">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Search documents...">
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Types</option>
                    <option>Contract</option>
                    <option>Legal Brief</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Status</option>
                    <option>Approved</option>
                    <option>Pending</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Document Name</th>
                    <th>Type</th>
                    <th>Owner</th>
                    <th>Created</th>
                    <th>Retention</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><i class="bi bi-file-pdf text-danger"></i> Contract_Smith.pdf</td>
                    <td>Contract</td>
                    <td>John Doe</td>
                    <td>Jan 20, 2024</td>
                    <td>7 years</td>
                    <td><span class="badge bg-success">Compliant</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> View</a>
                    </td>
                </tr>
                <tr>
                    <td><i class="bi bi-file-word text-primary"></i> Brief_Case123.docx</td>
                    <td>Legal Brief</td>
                    <td>Jane Smith</td>
                    <td>Jan 18, 2024</td>
                    <td>10 years</td>
                    <td><span class="badge bg-success">Compliant</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> View</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
