<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CKN Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* WCAG 2.1 AA Compliant - High Contrast Design */
        :root {
            --primary-blue: #1d4ed8;
            --primary-blue-dark: #1e40af;
            --primary-blue-light: #2563eb;
            --bg-white: #ffffff;
            --bg-light: #f1f5f9;
            --text-dark: #0f172a;
            --text-body: #1e293b;
            --text-muted: #475569;
            --border-color: #cbd5e1;
            --focus-ring: 0 0 0 3px rgba(29, 78, 216, 0.5);
            --success: #047857;
            --error: #b91c1c;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: var(--bg-light);
            min-height: 100vh;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            font-size: 1rem;
            line-height: 1.5;
            color: var(--text-body);
        }
        
        /* Skip Link for Keyboard Users */
        .skip-link {
            position: absolute;
            top: -100px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--primary-blue);
            color: white;
            padding: 12px 24px;
            border-radius: 0 0 8px 8px;
            z-index: 10000;
            font-weight: 600;
            text-decoration: none;
        }
        
        .skip-link:focus {
            top: 0;
            outline: none;
            box-shadow: var(--focus-ring);
        }
        
        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .auth-wrapper {
            display: flex;
            width: 100%;
            max-width: 1000px;
            background: var(--bg-white);
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
            overflow: hidden;
        }
        
        .auth-branding {
            flex: 1;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: white;
        }
        
        .auth-branding h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 16px;
        }
        
        .auth-branding p {
            font-size: 1rem;
            line-height: 1.6;
        }
        
        .auth-branding-icon {
            font-size: 4rem;
            margin-bottom: 24px;
        }
        
        .auth-features {
            margin-top: 32px;
        }
        
        .auth-features li {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 12px;
            font-size: 1rem;
        }
        
        .auth-features li i {
            color: #bfdbfe;
        }
        
        .auth-card {
            flex: 1;
            background: var(--bg-white);
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .auth-logo h1 {
            font-weight: 700;
            color: var(--text-dark);
            font-size: 1.75rem;
            margin-top: 12px;
        }
        
        .auth-logo i {
            font-size: 2.5rem;
            color: var(--primary-blue);
        }
        
        .auth-logo p {
            color: var(--text-muted);
            font-size: 1rem;
            margin-top: 4px;
        }
        
        /* Accessible Form Controls */
        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            font-size: 0.9375rem;
            margin-bottom: 8px;
            display: block;
        }
        
        .form-control {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
            background: var(--bg-white);
            color: var(--text-body);
            min-height: 48px; /* Touch target size */
        }
        
        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: var(--focus-ring);
            outline: none;
        }
        
        .form-control::placeholder {
            color: var(--text-muted);
        }
        
        /* Accessible Buttons */
        .btn-primary {
            background: var(--primary-blue);
            border: 2px solid var(--primary-blue);
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            font-size: 1rem;
            min-height: 48px;
            transition: background-color 0.2s ease, box-shadow 0.2s ease;
            color: white;
        }
        
        .btn-primary:hover {
            background: var(--primary-blue-dark);
            border-color: var(--primary-blue-dark);
        }
        
        .btn-primary:focus {
            outline: none;
            box-shadow: var(--focus-ring);
        }
        
        .btn-outline-secondary {
            border: 2px solid var(--border-color);
            color: var(--text-body);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 0.9375rem;
            min-height: 44px;
            transition: all 0.2s ease;
            background: var(--bg-white);
        }
        
        .btn-outline-secondary:hover {
            background: var(--bg-light);
            border-color: var(--primary-blue);
            color: var(--primary-blue);
        }
        
        .btn-outline-secondary:focus {
            outline: none;
            box-shadow: var(--focus-ring);
        }
        
        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid var(--border-color);
        }
        
        .form-check-input:checked {
            background-color: var(--primary-blue);
            border-color: var(--primary-blue);
        }
        
        .form-check-input:focus {
            box-shadow: var(--focus-ring);
        }
        
        .form-check-label {
            color: var(--text-body);
            font-size: 0.9375rem;
            padding-left: 4px;
        }
        
        /* Links with proper contrast */
        a {
            color: var(--primary-blue);
            text-decoration: underline;
            font-weight: 600;
        }
        
        a:hover {
            color: var(--primary-blue-dark);
        }
        
        a:focus {
            outline: none;
            box-shadow: var(--focus-ring);
            border-radius: 4px;
        }
        
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 24px 0;
            color: var(--text-muted);
            font-size: 0.9375rem;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--border-color);
        }
        
        .divider span {
            padding: 0 16px;
        }
        
        /* Demo Accounts Section - Accessible */
        .demo-accounts {
            background: var(--bg-light);
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 20px;
            margin-top: 16px;
        }
        
        .demo-accounts h6 {
            color: var(--text-dark);
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 16px;
        }
        
        .demo-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            padding: 12px 16px;
            margin-bottom: 10px;
            background: var(--bg-white);
            border: 2px solid var(--border-color);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 0.9375rem;
            color: var(--text-body);
            min-height: 48px;
            text-align: left;
        }
        
        .demo-btn:last-child {
            margin-bottom: 0;
        }
        
        .demo-btn:hover {
            border-color: var(--primary-blue);
            background: rgba(29, 78, 216, 0.05);
        }
        
        .demo-btn:focus {
            outline: none;
            box-shadow: var(--focus-ring);
            border-color: var(--primary-blue);
        }
        
        .demo-btn i[aria-hidden] {
            color: var(--primary-blue);
            font-size: 1.125rem;
        }
        
        .demo-btn .role {
            font-weight: 700;
            color: var(--text-dark);
        }
        
        .demo-btn .email {
            color: var(--text-muted);
            font-size: 0.875rem;
            margin-left: auto;
        }
        
        /* Error messages - accessible */
        .alert-danger {
            background-color: #fef2f2;
            border: 2px solid var(--error);
            color: var(--error);
            padding: 12px 16px;
            border-radius: 8px;
            font-weight: 500;
        }
        
        .text-danger {
            color: var(--error) !important;
            font-weight: 500;
        }
        
        /* Reduced motion preference */
        @@media (prefers-reduced-motion: reduce) {
            * {
                transition: none !important;
                animation: none !important;
            }
        }
        
        @@media (max-width: 768px) {
            .auth-wrapper {
                flex-direction: column;
            }
            
            .auth-branding {
                padding: 40px 30px;
            }
            
            .auth-card {
                padding: 40px 30px;
            }
        }
    </style>
</head>
<body>
    <!-- Skip Link for Screen Readers and Keyboard Navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <div class="auth-container">
        <div class="auth-wrapper" role="main">
            <aside class="auth-branding d-none d-md-flex" aria-label="Product information">
                <i class="bi bi-building auth-branding-icon" aria-hidden="true"></i>
                <h2>CKN Document</h2>
                <p>A comprehensive ERP & Document Management System designed specifically for law firms.</p>
                <ul class="auth-features list-unstyled" aria-label="Key features">
                    <li><i class="bi bi-check-circle-fill" aria-hidden="true"></i> Secure Document Management</li>
                    <li><i class="bi bi-check-circle-fill" aria-hidden="true"></i> Multi-tenant Architecture</li>
                    <li><i class="bi bi-check-circle-fill" aria-hidden="true"></i> Role-based Access Control</li>
                    <li><i class="bi bi-check-circle-fill" aria-hidden="true"></i> Audit Trail & Compliance</li>
                    <li><i class="bi bi-check-circle-fill" aria-hidden="true"></i> Client Portal Access</li>
                </ul>
            </aside>
            <section class="auth-card" id="main-content" aria-labelledby="auth-heading">
                <div class="auth-logo">
                    <i class="bi bi-file-earmark-lock" aria-hidden="true"></i>
                    <h1 id="auth-heading">Welcome Back</h1>
                    <p>Sign in to your account</p>
                </div>
                @RenderBody()
            </section>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
