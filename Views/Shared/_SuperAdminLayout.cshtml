<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CKN Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <script>
        (function() {
            var theme = localStorage.getItem('theme') || 'light';
            if (theme === 'dark' || (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                document.documentElement.classList.add('dark-mode');
            }
        })();
    </script>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle navigation">
        <span class="hamburger"></span>
    </button>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    
    <div class="app-layout">
        <!-- Sidebar Navigation -->
        <nav class="sidebar" id="sidebar" role="navigation" aria-label="Main navigation">
            <div class="sidebar-header">
                <a asp-controller="SuperAdminDashboard" asp-action="Index" class="sidebar-brand">
                    <img src="/images/document_logo.png" alt="Logo" style="width: 32px; height: 32px; object-fit: contain;" />
                    <span>CKN Admin</span>
                </a>
            </div>
            
            <div class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title" id="nav-main">Main</div>
                    <ul class="nav flex-column" role="menu" aria-labelledby="nav-main">
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="SuperAdminDashboard" asp-action="Index" role="menuitem">
                                <i class="bi bi-grid-1x2" aria-hidden="true"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="LawFirm" asp-action="Index" role="menuitem">
                                <i class="bi bi-buildings" aria-hidden="true"></i>
                                <span>Law Firms</span>
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Subscription" asp-action="Index" role="menuitem">
                                <i class="bi bi-credit-card" aria-hidden="true"></i>
                                <span>Subscriptions</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title" id="nav-finance">Finance</div>
                    <ul class="nav flex-column" role="menu" aria-labelledby="nav-finance">
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Invoice" asp-action="Index" role="menuitem">
                                <i class="bi bi-receipt" aria-hidden="true"></i>
                                <span>Invoices</span>
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Payment" asp-action="Index" role="menuitem">
                                <i class="bi bi-cash-stack" aria-hidden="true"></i>
                                <span>Payments</span>
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Revenue" asp-action="Index" role="menuitem">
                                <i class="bi bi-graph-up-arrow" aria-hidden="true"></i>
                                <span>Revenue</span>
                            </a>
                        </li>
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="Expense" asp-action="Index" role="menuitem">
                                <i class="bi bi-graph-down-arrow" aria-hidden="true"></i>
                                <span>Expenses</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title" id="nav-account">Account</div>
                    <ul class="nav flex-column" role="menu" aria-labelledby="nav-account">
                        <li class="nav-item" role="none">
                            <a class="nav-link" asp-controller="SuperAdminSettings" asp-action="Index" role="menuitem">
                                <i class="bi bi-gear" aria-hidden="true"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="sidebar-user">
                <div class="user-info">
                    <div class="user-avatar" aria-hidden="true">
                        <i class="bi bi-person"></i>
                    </div>
                    <div class="user-details">
                        <div class="user-name">@User.Identity?.Name</div>
                        <div class="user-role">Super Admin</div>
                    </div>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content" id="main-content" role="main">
            <header class="header">
                <h1 class="header-title">@ViewData["Title"]</h1>
                <div class="header-actions">
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right" aria-hidden="true"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </header>
            
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function() {
            var theme = localStorage.getItem('theme') || 'light';
            if (theme === 'dark' || (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.body.classList.add('dark-mode');
            }
        })();
        
        // Sidebar toggle for mobile and desktop
        (function() {
            const toggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const mainContent = document.querySelector('.main-content');
            
            if (toggle && sidebar) {
                // Load saved sidebar state from localStorage
                const savedState = localStorage.getItem('sidebarCollapsed');
                if (savedState === 'true' && window.innerWidth > 991) {
                    sidebar.classList.add('collapsed');
                    if (mainContent) mainContent.classList.add('expanded');
                    toggle.classList.add('active');
                }
                
                toggle.addEventListener('click', function() {
                    if (window.innerWidth > 991) {
                        // Desktop: collapse/expand sidebar
                        sidebar.classList.toggle('collapsed');
                        if (mainContent) mainContent.classList.toggle('expanded');
                        toggle.classList.toggle('active');
                        // Save state to localStorage
                        localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
                    } else {
                        // Mobile: slide in/out with overlay
                        sidebar.classList.toggle('show');
                        if (overlay) overlay.classList.toggle('show');
                        toggle.classList.toggle('active');
                    }
                });
                
                if (overlay) {
                    overlay.addEventListener('click', function() {
                        sidebar.classList.remove('show');
                        overlay.classList.remove('show');
                        toggle.classList.remove('active');
                    });
                }
                
                // Handle window resize
                window.addEventListener('resize', function() {
                    if (window.innerWidth > 991) {
                        // Remove mobile classes when resizing to desktop
                        sidebar.classList.remove('show');
                        if (overlay) overlay.classList.remove('show');
                        // Re-apply desktop collapsed state from localStorage
                        const savedState = localStorage.getItem('sidebarCollapsed');
                        if (savedState === 'true') {
                            sidebar.classList.add('collapsed');
                            if (mainContent) mainContent.classList.add('expanded');
                            toggle.classList.add('active');
                        }
                    } else {
                        // Remove desktop classes when resizing to mobile
                        sidebar.classList.remove('collapsed');
                        if (mainContent) mainContent.classList.remove('expanded');
                        toggle.classList.remove('active');
                    }
                });
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
