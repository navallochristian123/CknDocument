@using CKNDocument.Models.DTOs
@model LoginRequestDto
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

@await Html.PartialAsync("_Toast")

<form method="post" asp-controller="Auth" asp-action="Login" id="loginForm" novalidate>
    @Html.AntiForgeryToken()
    
    <!-- Email Input -->
    <div class="form-group">
        <label class="form-label">Email or Username</label>
        <input type="text" 
               class="form-input @(ViewData.ModelState["EmailOrUsername"]?.Errors.Any() == true ? "is-invalid" : "")" 
               name="EmailOrUsername" 
               id="emailOrUsername" 
               value="@Model?.EmailOrUsername"
               placeholder="Enter your email or username" 
               required 
               autocomplete="username" />
        <span asp-validation-for="EmailOrUsername" class="field-validation-error"></span>
    </div>
    
    <!-- Password Input -->
    <div class="form-group">
        <label class="form-label">Password</label>
        <div class="password-wrapper">
            <input type="password" 
                   class="form-input @(ViewData.ModelState["Password"]?.Errors.Any() == true ? "is-invalid" : "")" 
                   name="Password" 
                   id="passwordInput" 
                   placeholder="Enter your password" 
                   required 
                   autocomplete="current-password" />
            <button class="password-toggle" type="button" id="togglePassword">
                <i class="bi bi-eye" id="togglePasswordIcon"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
    
    <!-- Remember & Forgot -->
    <div class="form-options">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe" value="true">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
        <a href="/Auth/ForgotPassword" class="forgot-link">Forgot password?</a>
    </div>
    
    <!-- Submit Button -->
    <button type="submit" class="btn-submit">
        Sign In
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('togglePassword').addEventListener('click', function() {
            var passwordInput = document.getElementById('passwordInput');
            var icon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
}
