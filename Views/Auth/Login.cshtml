@using CKNDocument.Models.DTOs
@model LoginRequestDto
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

@await Html.PartialAsync("_Toast")

<form method="post" asp-controller="Auth" asp-action="Login" id="loginForm" novalidate>
    @Html.AntiForgeryToken()
    
    <!-- Email Input -->
    <div class="form-group">
        <label class="form-label">Email or Username</label>
        <input type="text" 
               class="form-input @(ViewData.ModelState["EmailOrUsername"]?.Errors.Any() == true ? "is-invalid" : "")" 
               name="EmailOrUsername" 
               id="emailOrUsername" 
               value="@Model?.EmailOrUsername"
               placeholder="Enter your email or username" 
               required 
               autocomplete="username" />
        <span asp-validation-for="EmailOrUsername" class="field-validation-error"></span>
    </div>
    
    <!-- Password Input -->
    <div class="form-group">
        <label class="form-label">Password</label>
        <div class="password-wrapper">
            <input type="password" 
                   class="form-input @(ViewData.ModelState["Password"]?.Errors.Any() == true ? "is-invalid" : "")" 
                   name="Password" 
                   id="passwordInput" 
                   placeholder="Enter your password" 
                   required 
                   autocomplete="current-password" />
            <button class="password-toggle" type="button" id="togglePassword">
                <i class="bi bi-eye" id="togglePasswordIcon"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
    
    <!-- Remember & Forgot -->
    <div class="form-options">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe" value="true">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
        <a href="/Auth/ForgotPassword" class="forgot-link">Forgot password?</a>
    </div>
    
    <!-- Submit Button -->
    <button type="submit" class="btn-submit">
        Sign In
    </button>
</form>

<!-- Privacy Policy Link -->
<div class="text-center mt-3">
    <small>
        <a href="#" onclick="showPrivacyModal(); return false;" style="color: var(--accent-green);">
            <i class="bi bi-shield-lock me-1"></i>Data Privacy Policy
        </a>
    </small>
</div>

<!-- Data Privacy Modal -->
<div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 100%); color: white;">
                <h5 class="modal-title" id="privacyModalLabel">
                    <i class="bi bi-shield-lock me-2"></i>Data Privacy & Document Security
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="max-height: 60vh; overflow-y: auto;">
                <div class="alert alert-info border-0" style="background: #e7f3ff;">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Republic Act No. 10173 - Data Privacy Act of 2012 (Philippines)</strong>
                </div>

                <h6 class="fw-bold mt-3"><i class="bi bi-shield-check me-2 text-success"></i>Your Data is Protected</h6>
                <p>We comply with the <strong>Data Privacy Act of 2012 (RA 10173)</strong> to protect your personal information and documents.</p>

                <div class="row g-3 mb-3">
                    <div class="col-6">
                        <div class="card border-success h-100">
                            <div class="card-body p-2 text-center">
                                <i class="bi bi-lock-fill text-success fs-4"></i>
                                <p class="small mb-0 mt-1">AES-256 Encryption</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card border-success h-100">
                            <div class="card-body p-2 text-center">
                                <i class="bi bi-shield-check text-success fs-4"></i>
                                <p class="small mb-0 mt-1">Access Control</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card border-success h-100">
                            <div class="card-body p-2 text-center">
                                <i class="bi bi-clock-history text-success fs-4"></i>
                                <p class="small mb-0 mt-1">Audit Logging</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card border-success h-100">
                            <div class="card-body p-2 text-center">
                                <i class="bi bi-server text-success fs-4"></i>
                                <p class="small mb-0 mt-1">Secure Storage</p>
                            </div>
                        </div>
                    </div>
                </div>

                <h6 class="fw-bold mt-3"><i class="bi bi-person-check me-2 text-primary"></i>Your Rights</h6>
                <ul class="small">
                    <li>Right to be Informed about data processing</li>
                    <li>Right to Access your personal data</li>
                    <li>Right to Object to data processing</li>
                    <li>Right to Erasure (subject to legal requirements)</li>
                    <li>Right to Rectification of inaccurate data</li>
                </ul>

                <div class="alert alert-light border small">
                    <strong>Contact:</strong> privacy@lawfirmdms.com
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">
                    <i class="bi bi-check-circle me-1"></i>I Understand
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showPrivacyModal() {
            new bootstrap.Modal(document.getElementById('privacyModal')).show();
        }
        
        document.getElementById('togglePassword').addEventListener('click', function() {
            var passwordInput = document.getElementById('passwordInput');
            var icon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
}
