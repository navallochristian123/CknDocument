@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<div class="text-center">
    <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
    <h4 class="mt-3">Access Denied</h4>
    <p class="text-muted">You don't have permission to access this resource. Please contact your administrator if you believe this is an error.</p>
    
    <div class="d-flex gap-2 justify-content-center mt-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Go Back
        </a>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right me-2"></i>Login Again
        </a>
    </div>
</div>
