@{
    ViewData["Title"] = "Confirm Email";
    Layout = "_AuthLayout";
}

<div class="text-center">
    <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
    <h4 class="mt-3">Email Confirmed!</h4>
    <p class="text-muted">Your email has been successfully confirmed. You can now log in to your account.</p>
    
    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary mt-3">
        <i class="bi bi-box-arrow-in-right me-2"></i>Go to Login
    </a>
</div>
