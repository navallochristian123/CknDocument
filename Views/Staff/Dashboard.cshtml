@{
    ViewData["Title"] = "Dashboard";
    Layout = "_StaffLayout";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">My Documents</h6>
                        <h2 class="mb-0">48</h2>
                    </div>
                    <i class="bi bi-file-earmark fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Assigned to Me</h6>
                        <h2 class="mb-0">12</h2>
                    </div>
                    <i class="bi bi-file-check fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Pending Reviews</h6>
                        <h2 class="mb-0">5</h2>
                    </div>
                    <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Completed Today</h6>
                        <h2 class="mb-0">3</h2>
                    </div>
                    <i class="bi bi-check-circle fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Assigned Documents</h5>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Document</th>
                            <th>Client</th>
                            <th>Due Date</th>
                            <th>Priority</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><i class="bi bi-file-pdf text-danger"></i> Contract_Review.pdf</td>
                            <td>Smith & Co</td>
                            <td>Today</td>
                            <td><span class="badge bg-danger">High</span></td>
                            <td><a href="#" class="btn btn-sm btn-primary">Review</a></td>
                        </tr>
                        <tr>
                            <td><i class="bi bi-file-word text-primary"></i> Legal_Brief.docx</td>
                            <td>Johnson LLC</td>
                            <td>Tomorrow</td>
                            <td><span class="badge bg-warning">Medium</span></td>
                            <td><a href="#" class="btn btn-sm btn-primary">Review</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Activity</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0">
                        <small class="text-muted">2 hours ago</small>
                        <p class="mb-0">You uploaded Contract_Draft.pdf</p>
                    </li>
                    <li class="list-group-item px-0">
                        <small class="text-muted">5 hours ago</small>
                        <p class="mb-0">Review approved for Brief_001.docx</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
