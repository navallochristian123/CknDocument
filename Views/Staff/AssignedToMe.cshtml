@{
    ViewData["Title"] = "Assigned to Me";
    Layout = "_StaffLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Assigned to Me</h4>
        <p class="text-muted mb-0">Documents assigned for your review</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Document Name</th>
                    <th>Assigned By</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><i class="bi bi-file-pdf text-danger"></i> Contract_Review.pdf</td>
                    <td>Admin</td>
                    <td>Today</td>
                    <td><span class="badge bg-danger">High</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-primary">Review</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></a>
                    </td>
                </tr>
                <tr>
                    <td><i class="bi bi-file-word text-primary"></i> Legal_Brief.docx</td>
                    <td>Admin</td>
                    <td>Tomorrow</td>
                    <td><span class="badge bg-warning">Medium</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-primary">Review</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
