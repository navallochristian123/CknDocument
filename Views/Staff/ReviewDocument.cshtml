        `).join('');
        
        new bootstrap.Modal(document.getElementById('versionCompareModal')).show();
    }

    async function compareVersions() {
        const v1Id = document.getElementById('compareVersion1').value;
        const v2Id = document.getElementById('compareVersion2').value;
        const container = document.getElementById('versionComparisonContent');
        
        if (!v1Id || !v2Id) {
            container.innerHTML = `
                <div class="col-12 text-center text-muted py-5">
                    <i class="bi bi-git display-1"></i>
                    <p class="mt-2">Select two versions to compare</p>
                </div>
            `;
            return;
        }
        
        const v1 = documentVersions.find(v => v.versionId == v1Id);
        const v2 = documentVersions.find(v => v.versionId == v2Id);
        
        container.innerHTML = `
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <strong>v${v1?.versionNumber || '?'}</strong> - ${escapeHtml(v1?.changedBy || 'Client')}
                        <br><small class="text-muted">${formatDate(v1?.createdAt)}</small>
                    </div>
                    <div class="card-body">
                        <p><strong>Changes:</strong> ${escapeHtml(v1?.changeDescription || 'Initial upload')}</p>
                        <a href="/api/DocumentApi/${documentData.id}/download?versionId=${v1Id}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-download"></i> Download
                        </a>
                        <button class="btn btn-sm btn-outline-info" onclick="viewVersionInline(${v1Id})">
                            <i class="bi bi-eye"></i> View
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <strong>v${v2?.versionNumber || '?'}</strong> - ${escapeHtml(v2?.changedBy || 'Client')}
                        <br><small class="text-muted">${formatDate(v2?.createdAt)}</small>
                    </div>
                    <div class="card-body">
                        <p><strong>Changes:</strong> ${escapeHtml(v2?.changeDescription || 'Initial upload')}</p>
                        <a href="/api/DocumentApi/${documentData.id}/download?versionId=${v2Id}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-download"></i> Download
                        </a>
                        <button class="btn btn-sm btn-outline-info" onclick="viewVersionInline(${v2Id})">
                            <i class="bi bi-eye"></i> View
                        </button>
                    </div>
                </div>
            </div>
        `;
    }
</script>
