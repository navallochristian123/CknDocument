</div>

<!-- Version Comparison Modal -->
<div class="modal fade" id="versionCompareModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-fullscreen-lg-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-git me-2"></i>Version Comparison</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Compare Version:</label>
                        <select class="form-select" id="compareVersion1">
                            <option value="">Select version...</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">With Version:</label>
                        <select class="form-select" id="compareVersion2">
                            <option value="">Select version...</option>
                        </select>
                    </div>
                </div>
                
                <div class="row" id="versionComparisonContent">
                    <div class="col-12 text-center text-muted py-5">
                        <i class="bi bi-git display-1"></i>
