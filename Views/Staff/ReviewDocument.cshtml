@{
    ViewData["Title"] = "Review Document";
    Layout = "_StaffLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Review">Reviews</a></li>
                <li class="breadcrumb-item active">Review Document</li>
            </ol>
        </nav>
        <h4 class="mb-0 mt-2">Staff Document Review</h4>
    </div>
    <a href="/Review" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reviews
    </a>
</div>

<div class="row">
    <!-- Left Column - Document Info & Preview -->
    <div class="col-lg-5">
        <!-- Document Information -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Document Information</h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-3" id="loadingDoc">
                    <div class="spinner-border text-primary"></div>
                </div>
                <div id="documentInfo" style="display: none;">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8" id="docTitle">-</dd>
                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary" id="docType">-</span></dd>
                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8" id="docCategory">-</dd>
                        <dt class="col-sm-4">File:</dt>
                        <dd class="col-sm-8" id="docFileName">-</dd>
                        <dt class="col-sm-4">Size:</dt>
                        <dd class="col-sm-8" id="docFileSize">-</dd>
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8"><span class="badge" id="docStatus">-</span></dd>
                        <dt class="col-sm-4">Submitted:</dt>
                        <dd class="col-sm-8" id="docSubmittedDate">-</dd>
                        <dt class="col-sm-4">By:</dt>
                        <dd class="col-sm-8" id="docSubmitter">-</dd>
                        <dt class="col-sm-4">Client:</dt>
                        <dd class="col-sm-8" id="docClient">-</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Document Actions -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <button class="btn btn-primary w-100" onclick="openDocumentViewer()">
                            <i class="bi bi-eye"></i> View Inline
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-warning w-100" onclick="openMetadataEditor()">
                            <i class="bi bi-tags"></i> Edit Metadata
                        </button>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-outline-secondary w-100" id="btnDownloadDoc">
                            <i class="bi bi-download"></i> Download
                        </a>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-outline-info w-100" onclick="showVersionCompare()">
                            <i class="bi bi-git"></i> Versions
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Document Audit Trail -->
        <div class="card mb-3 border-info">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Document Audit Trail</h6>
                <button class="btn btn-sm btn-light" onclick="refreshAuditTrail()">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
            <div class="card-body p-0" style="max-height: 250px; overflow-y: auto;">
                <div class="list-group list-group-flush" id="auditTrailList">
                    <div class="list-group-item text-center text-muted">
                        <div class="spinner-border spinner-border-sm"></div> Loading audit trail...
                    </div>
                </div>
            </div>
        </div>

        <!-- Metadata Verification Panel (Staff Focus) -->
        <div class="card mb-3 border-success">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Metadata & Credentials Check</h6>
            </div>
            <div class="card-body" id="metadataCheckPanel">
                <p class="text-muted small mb-3">
                    <i class="bi bi-info-circle me-1"></i>
                    Verify document metadata and tagging before forwarding to Lawyer.
                </p>
                <div id="metadataCheckContent">
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small"><i class="bi bi-file-text me-1"></i>Document Title:</span>
                            <span class="badge bg-light text-dark" id="metaTitle">-</span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small"><i class="bi bi-tag me-1"></i>Document Type:</span>
                            <span class="badge bg-secondary" id="metaType">-</span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small"><i class="bi bi-folder me-1"></i>Category:</span>
                            <span class="badge bg-info" id="metaCategory">-</span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small"><i class="bi bi-person me-1"></i>Client:</span>
                            <span class="badge bg-primary" id="metaClient">-</span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small"><i class="bi bi-tags me-1"></i>Tags:</span>
                            <span id="metaTags">-</span>
                        </div>
                    </div>
                    <hr>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="chkMetaTitleCorrect">
                        <label class="form-check-label small" for="chkMetaTitleCorrect">
                            Document title is clear and accurate
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="chkMetaTypeCorrect">
                        <label class="form-check-label small" for="chkMetaTypeCorrect">
                            Document type is correctly classified
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="chkMetaCategoryCorrect">
                        <label class="form-check-label small" for="chkMetaCategoryCorrect">
                            Category is appropriate
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="chkMetaTagsAdded">
                        <label class="form-check-label small" for="chkMetaTagsAdded">
                            Relevant tags have been added
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Version History -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Version History</h6>
                <span class="badge bg-primary" id="versionCount">0</span>
            </div>
            <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
                <ul class="list-group list-group-flush" id="versionsList">
                    <li class="list-group-item text-center text-muted">Loading...</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Right Column - Staff Checklist & Decision -->
    <div class="col-lg-7">
        <!-- Staff Review Checklist -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="bi bi-list-check me-2"></i>Review Checklist</h6>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    <i class="bi bi-info-circle me-1"></i>
                    Complete the checklist items below before making your decision. Required items must be checked.
                </p>
                <div id="checklistContainer">
                    <div class="text-center py-3">
                        <div class="spinner-border text-primary"></div>
                        <p class="text-muted mt-2">Loading checklist...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff Decision -->
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="bi bi-person-check me-2"></i>Staff Review Decision</h6>
            </div>
            <div class="card-body">
                <input type="hidden" id="documentId">
                
                <!-- Checklist Summary -->
                <div class="alert alert-light mb-3" id="checklistSummary">
                    <div class="d-flex justify-content-between">
                        <span>Checklist Progress:</span>
                        <span id="checklistProgress">0 / 0 completed</span>
                    </div>
                    <div class="progress mt-2" style="height: 10px;">
                        <div class="progress-bar" id="checklistProgressBar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <!-- Staff Remarks -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Review Remarks <span class="text-muted">(Required for Rejection)</span></label>
                    <textarea class="form-control" id="staffRemarks" rows="3" placeholder="Enter your review remarks or notes..."></textarea>
                </div>

                <!-- Internal Notes (visible only to staff/admin) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Internal Notes <span class="text-muted">(Optional - Admin only)</span></label>
                    <textarea class="form-control" id="internalNotes" rows="2" placeholder="Notes for admin review..."></textarea>
                </div>

                <!-- Decision Buttons -->
                <div class="row g-2">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-success btn-lg w-100" id="btnApprove" disabled>
                            <i class="bi bi-check-circle me-1"></i>Approve
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-warning btn-lg w-100" id="btnRequestChanges">
                            <i class="bi bi-arrow-repeat me-1"></i>Changes
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-danger btn-lg w-100" id="btnReject">
                            <i class="bi bi-x-circle me-1"></i>Reject
                        </button>
                    </div>
                </div>

                <div class="alert alert-info mt-3 mb-0 small">
                    <i class="bi bi-lightbulb me-1"></i>
                    <strong>Tip:</strong> Approved documents will be forwarded to Lawyer for content review.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Request Changes Modal -->
<div class="modal fade" id="requestChangesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="bi bi-arrow-repeat me-2"></i>Request Changes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Please specify what changes are required:</p>
                <div class="mb-3">
                    <label class="form-label">Required Changes</label>
                    <textarea class="form-control" id="changesRequired" rows="4" placeholder="Describe what changes need to be made..." required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="confirmRequestChangesBtn">
                    <i class="bi bi-arrow-repeat me-1"></i>Request Changes
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Rejection Confirmation Modal -->
<div class="modal fade" id="rejectConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>Confirm Rejection</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reject this document?</p>
                <div class="alert alert-warning">
                    <strong>Reason:</strong>
                    <p class="mb-0" id="rejectReasonPreview">-</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRejectBtn">
                    <i class="bi bi-x-circle me-1"></i>Confirm Rejection
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Inline Document Viewer Modal -->
<div class="modal fade" id="documentViewerModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-fullscreen-lg-down">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-eye me-2"></i>Document Preview - <span id="viewerDocTitle"></span></h5>
                <div>
                    <select class="form-select form-select-sm d-inline-block w-auto me-2" id="viewerVersionSelect">
                        <option value="">Current Version</option>
                    </select>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
            </div>
            <div class="modal-body p-0" style="height: 80vh; overflow: auto;">
                <div class="text-center py-5" id="viewerLoading">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2">Loading document...</p>
                </div>
                <iframe id="documentIframe" class="w-100 h-100 border-0" style="display: none;"></iframe>
                <div id="documentTextViewer" class="p-4" style="display: none; white-space: pre-wrap; font-family: monospace; background: #f8f9fa;"></div>
                <div id="documentImageViewer" class="text-center p-4" style="display: none;">
                    <img id="documentImage" style="max-width: 100%; max-height: 70vh;" />
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <span class="badge bg-info me-2" id="viewerVersionLabel">v1</span>
                    <small class="text-muted" id="viewerVersionInfo">-</small>
                </div>
                <div>
                    <a href="#" class="btn btn-outline-secondary" id="btnDownloadFromViewer">
                        <i class="bi bi-download"></i> Download
                    </a>
                    <button type="button" class="btn btn-warning" onclick="openMetadataEditor()">
                        <i class="bi bi-tags"></i> Edit Metadata
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Metadata Editor Modal (Staff Only) -->
