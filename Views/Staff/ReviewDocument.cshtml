    function updateChecklistProgress() {
        const totalRequired = checklistItems.filter(i => i.isRequired).length;
        const completedRequired = checklistItems.filter(i => i.isRequired && checklistResults[i.checklistItemId]?.isPassed).length;
        const totalChecked = Object.values(checklistResults).filter(r => r.isPassed).length;
        const total = checklistItems.length;

        const progress = total > 0 ? Math.round((totalChecked / total) * 100) : 0;
        
        document.getElementById('checklistProgress').textContent = `${totalChecked} / ${total} completed`;
        document.getElementById('checklistProgressBar').style.width = `${progress}%`;
        document.getElementById('checklistProgressBar').className = `progress-bar ${completedRequired >= totalRequired ? 'bg-success' : 'bg-info'}`;

        document.getElementById('btnApprove').disabled = completedRequired < totalRequired;
    }

