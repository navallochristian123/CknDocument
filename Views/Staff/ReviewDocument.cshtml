            document.getElementById('btnDownloadFromViewer').href = `/api/DocumentApi/${docId}/download?versionId=${versionId}`;
        }
        
        const extension = (documentData.fileExtension || '').toLowerCase();
        const viewUrl = `/api/DocumentApi/${docId}/view?versionId=${versionId}`;
        
