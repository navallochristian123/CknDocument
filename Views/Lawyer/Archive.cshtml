@{
    ViewData["Title"] = "Archived Documents";
    Layout = "_LawyerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Archived Documents</h4>
        <p class="text-muted mb-0">View archived, rejected, and old version documents</p>
    </div>
    <button class="btn btn-outline-secondary" onclick="loadAll()">
        <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-primary" id="statArchived">0</div>
                <small class="text-muted">Archived</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-danger" id="statRejected">0</div>
                <small class="text-muted">Rejected</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-info" id="statVersions">0</div>
                <small class="text-muted">Old Versions</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-warning" id="statRetention">0</div>
                <small class="text-muted">Retention Queue</small>
            </div>
        </div>
    </div>
</div>

<!-- Archive Type Tabs -->
<ul class="nav nav-tabs mb-4" id="archiveTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="archived-tab" data-bs-toggle="tab" data-bs-target="#archived" type="button" role="tab">
            <i class="bi bi-archive me-1"></i> Archived
            <span class="badge bg-secondary" id="archivedCount">0</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">
            <i class="bi bi-x-circle me-1"></i> Rejected
            <span class="badge bg-danger" id="rejectedCount">0</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="versions-tab" data-bs-toggle="tab" data-bs-target="#versions" type="button" role="tab">
            <i class="bi bi-clock-history me-1"></i> Old Versions
            <span class="badge bg-info" id="versionsCount">0</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="archiveTabContent">
    <!-- Archived Documents Tab -->
    <div class="tab-pane fade show active" id="archived" role="tabpanel">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="searchArchived" placeholder="Search archived documents...">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="filterArchivedType">
                            <option value="">All Types</option>
                            <option value="Contract">Contract</option>
                            <option value="Agreement">Agreement</option>
                            <option value="Legal Brief">Legal Brief</option>
                            <option value="Court Filing">Court Filing</option>
                            <option value="Correspondence">Correspondence</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="sortArchived">
                            <option value="archivedAt-desc">Newest First</option>
                            <option value="archivedAt-asc">Oldest First</option>
                            <option value="title-asc">Title A-Z</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Document</th>
                                <th>Type</th>
                                <th>Client</th>
                                <th>Archived Date</th>
                                <th>Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="archivedTbody">
                            <tr><td colspan="6" class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Rejected Documents Tab -->
    <div class="tab-pane fade" id="rejected" role="tabpanel">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center g-3">
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="searchRejected" placeholder="Search rejected documents...">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="sortRejected">
                            <option value="archivedAt-desc">Newest First</option>
                            <option value="archivedAt-asc">Oldest First</option>
                            <option value="title-asc">Title A-Z</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Document</th>
                                <th>Type</th>
                                <th>Client</th>
                                <th>Rejected Date</th>
                                <th>Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="rejectedTbody">
                            <tr><td colspan="6" class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Old Versions Tab -->
    <div class="tab-pane fade" id="versions" role="tabpanel">
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            When a new version is created, the previous version is automatically archived here.
        </div>
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center g-3">
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="searchVersions" placeholder="Search...">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="sortVersions">
                            <option value="archivedAt-desc">Newest First</option>
                            <option value="archivedAt-asc">Oldest First</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Document</th>
                                <th>Version</th>
                                <th>Replaced By</th>
                                <th>Archived Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="versionsTbody">
                            <tr><td colspan="5" class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Document Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Archive Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Title:</dt>
                    <dd class="col-sm-8" id="viewTitle">-</dd>
                    <dt class="col-sm-4">Type:</dt>
                    <dd class="col-sm-8" id="viewType">-</dd>
                    <dt class="col-sm-4">Client:</dt>
                    <dd class="col-sm-8" id="viewClient">-</dd>
                    <dt class="col-sm-4">Original Status:</dt>
                    <dd class="col-sm-8" id="viewOriginalStatus">-</dd>
                    <dt class="col-sm-4">Archive Type:</dt>
                    <dd class="col-sm-8" id="viewArchiveType">-</dd>
                    <dt class="col-sm-4">Archived Date:</dt>
                    <dd class="col-sm-8" id="viewArchivedAt">-</dd>
                    <dt class="col-sm-4">Archived By:</dt>
                    <dd class="col-sm-8" id="viewArchivedBy">-</dd>
                    <dt class="col-sm-4">Reason:</dt>
                    <dd class="col-sm-8" id="viewReason">-</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-outline-primary" id="viewDownloadBtn" target="_blank">
                    <i class="bi bi-download me-1"></i> Download
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let archivedDocs = [], rejectedDocs = [], versionDocs = [];

    document.addEventListener('DOMContentLoaded', function() {
        loadAll();

        document.getElementById('searchArchived').addEventListener('input', debounce(renderArchivedTable, 300));
        document.getElementById('searchRejected').addEventListener('input', debounce(renderRejectedTable, 300));
        document.getElementById('searchVersions').addEventListener('input', debounce(renderVersionsTable, 300));
        document.getElementById('filterArchivedType').addEventListener('change', renderArchivedTable);
        document.getElementById('sortArchived').addEventListener('change', renderArchivedTable);
        document.getElementById('sortRejected').addEventListener('change', renderRejectedTable);
        document.getElementById('sortVersions').addEventListener('change', renderVersionsTable);
    });

    async function loadAll() {
        await Promise.all([loadArchivedDocuments(), loadRejectedDocuments(), loadArchivedVersions(), loadStats()]);
    }

    async function loadStats() {
        try {
            const response = await fetch('/api/ArchiveApi/stats');
            if (!response.ok) return;
            const ct = response.headers.get('content-type') || '';
            if (!ct.includes('application/json')) return;
            const data = await response.json();
            if (data.success) {
                document.getElementById('statArchived').textContent = data.stats.totalArchived || 0;
                document.getElementById('statRejected').textContent = data.stats.totalRejected || 0;
                document.getElementById('statVersions').textContent = data.stats.totalVersions || 0;
                document.getElementById('statRetention').textContent = data.stats.totalRetention || 0;
            }
        } catch (e) { console.error('Error loading stats:', e); }
    }

    async function loadArchivedDocuments() {
        try {
            const response = await fetch('/api/ArchiveApi?type=archived');
            if (!response.ok) return;
            const ct = response.headers.get('content-type') || '';
            if (!ct.includes('application/json')) return;
            const data = await response.json();
            if (data.success) {
                archivedDocs = data.archives || [];
                document.getElementById('archivedCount').textContent = archivedDocs.length;
                renderArchivedTable();
            }
        } catch (e) { console.error('Error:', e); }
    }

    async function loadRejectedDocuments() {
        try {
            const response = await fetch('/api/ArchiveApi?type=rejected');
            if (!response.ok) return;
            const ct = response.headers.get('content-type') || '';
            if (!ct.includes('application/json')) return;
            const data = await response.json();
            if (data.success) {
                rejectedDocs = data.archives || [];
                document.getElementById('rejectedCount').textContent = rejectedDocs.length;
                renderRejectedTable();
            }
        } catch (e) { console.error('Error:', e); }
    }

    async function loadArchivedVersions() {
        try {
            const response = await fetch('/api/ArchiveApi?type=version');
            if (!response.ok) return;
            const ct = response.headers.get('content-type') || '';
            if (!ct.includes('application/json')) return;
            const data = await response.json();
            if (data.success) {
                versionDocs = data.archives || [];
                document.getElementById('versionsCount').textContent = versionDocs.length;
                renderVersionsTable();
            }
        } catch (e) { console.error('Error:', e); }
    }

    function renderArchivedTable() {
        const tbody = document.getElementById('archivedTbody');
        const search = document.getElementById('searchArchived').value.toLowerCase();
        const typeFilter = document.getElementById('filterArchivedType').value;
        const sort = document.getElementById('sortArchived').value;

        let filtered = archivedDocs.filter(d => {
            const matchSearch = (d.documentTitle || '').toLowerCase().includes(search) || (d.clientName || '').toLowerCase().includes(search);
            const matchType = !typeFilter || d.documentType === typeFilter;
            return matchSearch && matchType;
        });
        filtered = sortDocs(filtered, sort);

        if (filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" class="text-center py-4 text-muted">No archived documents found</td></tr>';
            return;
        }
        tbody.innerHTML = filtered.map(d => `
            <tr>
                <td><i class="bi ${getFileIcon(d.fileExtension)} me-2"></i><strong>${esc(d.documentTitle)}</strong></td>
                <td><span class="badge bg-secondary">${d.documentType || 'Unknown'}</span></td>
                <td>${esc(d.clientName || '-')}</td>
                <td>${fmtDate(d.archivedAt)}</td>
                <td><span class="text-truncate d-inline-block" style="max-width:150px;">${esc(d.archiveReason || '-')}</span></td>
                <td>
                    <button class="btn btn-sm btn-outline-primary me-1" onclick="viewDocument(${d.archiveId})" title="View"><i class="bi bi-eye"></i></button>
                    <a href="/api/ArchiveApi/${d.archiveId}/download" class="btn btn-sm btn-outline-success" target="_blank" title="Download"><i class="bi bi-download"></i></a>
                </td>
            </tr>`).join('');
    }

    function renderRejectedTable() {
        const tbody = document.getElementById('rejectedTbody');
        const search = document.getElementById('searchRejected').value.toLowerCase();
        const sort = document.getElementById('sortRejected').value;

        let filtered = rejectedDocs.filter(d => (d.documentTitle || '').toLowerCase().includes(search) || (d.clientName || '').toLowerCase().includes(search));
        filtered = sortDocs(filtered, sort);

        if (filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" class="text-center py-4 text-muted">No rejected documents found</td></tr>';
            return;
        }
        tbody.innerHTML = filtered.map(d => `
            <tr>
                <td><i class="bi ${getFileIcon(d.fileExtension)} me-2"></i><strong>${esc(d.documentTitle)}</strong></td>
                <td><span class="badge bg-secondary">${d.documentType || 'Unknown'}</span></td>
                <td>${esc(d.clientName || '-')}</td>
                <td>${fmtDate(d.archivedAt)}</td>
                <td><span class="text-truncate d-inline-block" style="max-width:150px;">${esc(d.archiveReason || '-')}</span></td>
                <td>
                    <button class="btn btn-sm btn-outline-primary me-1" onclick="viewDocument(${d.archiveId})" title="View"><i class="bi bi-eye"></i></button>
                    <a href="/api/ArchiveApi/${d.archiveId}/download" class="btn btn-sm btn-outline-success" target="_blank" title="Download"><i class="bi bi-download"></i></a>
                </td>
            </tr>`).join('');
    }

    function renderVersionsTable() {
        const tbody = document.getElementById('versionsTbody');
        const search = document.getElementById('searchVersions').value.toLowerCase();
        const sort = document.getElementById('sortVersions').value;

        let filtered = versionDocs.filter(d => (d.documentTitle || '').toLowerCase().includes(search));
        filtered = sortDocs(filtered, sort);

        if (filtered.length === 0) {
            tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-muted">No archived versions found</td></tr>';
            return;
        }
        tbody.innerHTML = filtered.map(d => `
            <tr>
                <td><i class="bi ${getFileIcon(d.fileExtension)} me-2"></i><strong>${esc(d.documentTitle)}</strong></td>
                <td><span class="badge bg-info">v${d.versionNumber || '1'}</span></td>
                <td>v${(d.versionNumber || 1) + 1}</td>
                <td>${fmtDate(d.archivedAt)}</td>
                <td>
                    <button class="btn btn-sm btn-outline-primary me-1" onclick="viewDocument(${d.archiveId})" title="View"><i class="bi bi-eye"></i></button>
                    <a href="/api/ArchiveApi/${d.archiveId}/download" class="btn btn-sm btn-outline-success" target="_blank" title="Download"><i class="bi bi-download"></i></a>
                </td>
            </tr>`).join('');
    }

    async function viewDocument(archiveId) {
        const doc = [...archivedDocs, ...rejectedDocs, ...versionDocs].find(d => d.archiveId === archiveId);
        if (!doc) return;

        document.getElementById('viewTitle').textContent = doc.documentTitle || '-';
        document.getElementById('viewType').textContent = doc.documentType || '-';
        document.getElementById('viewClient').textContent = doc.clientName || '-';
        document.getElementById('viewOriginalStatus').textContent = doc.originalStatus || '-';
        document.getElementById('viewArchiveType').textContent = doc.archiveType || '-';
        document.getElementById('viewArchivedAt').textContent = fmtDate(doc.archivedAt);
        document.getElementById('viewArchivedBy').textContent = doc.archivedByName || '-';
        document.getElementById('viewReason').textContent = doc.archiveReason || '-';
        document.getElementById('viewDownloadBtn').href = `/api/ArchiveApi/${archiveId}/download`;

        new bootstrap.Modal(document.getElementById('viewModal')).show();
    }

    function sortDocs(arr, sort) {
        const [field, dir] = sort.split('-');
        return arr.sort((a, b) => {
            let aV = field === 'title' ? (a.documentTitle || '') : (a[field] || '');
            let bV = field === 'title' ? (b.documentTitle || '') : (b[field] || '');
            if (field === 'archivedAt') { aV = new Date(aV || 0); bV = new Date(bV || 0); }
            return dir === 'asc' ? (aV > bV ? 1 : -1) : (aV < bV ? 1 : -1);
        });
    }

    function getFileIcon(ext) {
        const icons = { '.pdf': 'bi-file-pdf text-danger', '.doc': 'bi-file-word text-primary', '.docx': 'bi-file-word text-primary', '.xls': 'bi-file-excel text-success', '.xlsx': 'bi-file-excel text-success', '.jpg': 'bi-file-image text-info', '.png': 'bi-file-image text-info' };
        return icons[ext?.toLowerCase()] || 'bi-file-earmark text-secondary';
    }
    function fmtDate(d) { return d ? new Date(d).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) : '-'; }
    function esc(t) { if (!t) return ''; const d = document.createElement('div'); d.textContent = t; return d.innerHTML; }
    function debounce(fn, ms) { let t; return (...a) => { clearTimeout(t); t = setTimeout(() => fn(...a), ms); }; }
</script>
}
