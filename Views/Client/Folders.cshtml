@{
    ViewData["Title"] = "My Folders";
    Layout = "_ClientLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">My Folders</h4>
        <p class="text-muted mb-0">Your document folders</p>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">General</h6>
                <small class="text-muted">10 documents</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">Contracts</h6>
                <small class="text-muted">5 documents</small>
            </div>
        </div>
    </div>
</div>
