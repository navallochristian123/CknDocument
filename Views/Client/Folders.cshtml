@{
    ViewData["Title"] = "My Folders";
    Layout = "_ClientLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">My Folders</h4>
        <nav aria-label="breadcrumb" id="breadcrumb-nav">
            <ol class="breadcrumb mb-0" id="folder-breadcrumb">
                <li class="breadcrumb-item active">Root</li>
            </ol>
        </nav>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
        <i class="bi bi-folder-plus"></i> New Folder
    </button>
</div>

<!-- Folders Grid -->
<div class="row" id="folders-container">
    <div class="col-12 text-center py-5" id="loading-folders">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-2">Loading folders...</p>
    </div>
</div>

<!-- Documents in Current Folder -->
<div class="mt-4" id="documents-section" style="display: none;">
    <h5 class="mb-3">Documents in this folder</h5>
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Document</th>
                        <th>Status</th>
                        <th>Uploaded</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="documents-table-body">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Folder Modal -->
<div class="modal fade" id="createFolderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Folder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createFolderForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Folder Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="folderName" required maxlength="255">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="folderDescription" rows="2" maxlength="500"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <div class="d-flex gap-2" id="colorPicker">
                            <button type="button" class="btn btn-sm color-btn active" data-color="#FFC107" style="background-color: #FFC107; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm color-btn" data-color="#28A745" style="background-color: #28A745; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm color-btn" data-color="#007BFF" style="background-color: #007BFF; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm color-btn" data-color="#DC3545" style="background-color: #DC3545; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm color-btn" data-color="#6C757D" style="background-color: #6C757D; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm color-btn" data-color="#17A2B8" style="background-color: #17A2B8; width: 30px; height: 30px; border-radius: 50%;"></button>
                        </div>
                        <input type="hidden" id="selectedColor" value="#FFC107">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="createFolderBtn">
                        <span class="spinner-border spinner-border-sm d-none" id="createSpinner"></span>
                        Create Folder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Folder Modal -->
<div class="modal fade" id="editFolderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Folder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editFolderForm">
                <input type="hidden" id="editFolderId">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Folder Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editFolderName" required maxlength="255">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="editFolderDescription" rows="2" maxlength="500"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <div class="d-flex gap-2" id="editColorPicker">
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#FFC107" style="background-color: #FFC107; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#28A745" style="background-color: #28A745; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#007BFF" style="background-color: #007BFF; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#DC3545" style="background-color: #DC3545; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#6C757D" style="background-color: #6C757D; width: 30px; height: 30px; border-radius: 50%;"></button>
                            <button type="button" class="btn btn-sm edit-color-btn" data-color="#17A2B8" style="background-color: #17A2B8; width: 30px; height: 30px; border-radius: 50%;"></button>
                        </div>
                        <input type="hidden" id="editSelectedColor">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger me-auto" id="deleteFolderBtn">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let currentFolderId = null;
    let breadcrumbPath = [];

    document.addEventListener('DOMContentLoaded', function() {
        loadFolders();

        // Color picker
        document.querySelectorAll('.color-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active', 'border', 'border-dark'));
                this.classList.add('active', 'border', 'border-dark');
                document.getElementById('selectedColor').value = this.dataset.color;
            });
        });

        document.querySelectorAll('.edit-color-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.edit-color-btn').forEach(b => b.classList.remove('active', 'border', 'border-dark'));
                this.classList.add('active', 'border', 'border-dark');
                document.getElementById('editSelectedColor').value = this.dataset.color;
            });
        });

        // Create folder
        document.getElementById('createFolderForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            await createFolder();
        });

        // Edit folder
        document.getElementById('editFolderForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            await updateFolder();
        });

        // Delete folder
        document.getElementById('deleteFolderBtn').addEventListener('click', async function() {
            if (confirm('Are you sure you want to delete this folder? This cannot be undone.')) {
                await deleteFolder();
            }
        });
    });

    async function loadFolders(parentId = null) {
        const container = document.getElementById('folders-container');
        container.innerHTML = `
            <div class="col-12 text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="text-muted mt-2">Loading folders...</p>
            </div>
        `;

        try {
            let url = '/api/FolderApi';
            if (parentId) {
                url += `?parentFolderId=${parentId}`;
            }

            const response = await fetch(url);
            const data = await response.json();

            if (data.success) {
                renderFolders(data.folders);
                if (parentId) {
                    loadDocumentsInFolder(parentId);
                } else {
                    document.getElementById('documents-section').style.display = 'none';
                }
            } else {
                showError('Failed to load folders');
            }
        } catch (error) {
            console.error('Error loading folders:', error);
            showError('Error loading folders');
        }
    }

    function renderFolders(folders) {
        const container = document.getElementById('folders-container');

        if (folders.length === 0 && !currentFolderId) {
            container.innerHTML = `
                <div class="col-12 text-center py-5">
                    <i class="bi bi-folder text-muted" style="font-size: 4rem;"></i>
                    <h5 class="text-muted mt-3">No folders yet</h5>
                    <p class="text-muted">Create your first folder to organize your documents</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                        <i class="bi bi-folder-plus"></i> Create Folder
                    </button>
                </div>
            `;
            return;
        }

        let html = '';

        // Back button if in subfolder
        if (currentFolderId) {
            const parentId = breadcrumbPath.length > 1 ? breadcrumbPath[breadcrumbPath.length - 2].id : null;
            html += `
                <div class="col-md-3 col-sm-4 col-6 mb-4">
                    <div class="card h-100" style="cursor: pointer;" onclick="navigateToFolder(${parentId ? parentId : 'null'})">
                        <div class="card-body text-center">
                            <i class="bi bi-arrow-left-circle fs-1 text-secondary"></i>
                            <h6 class="mt-2 mb-0">.. Back</h6>
                        </div>
                    </div>
                </div>
            `;
        }

        folders.forEach(folder => {
            html += `
                <div class="col-md-3 col-sm-4 col-6 mb-4">
                    <div class="card h-100 folder-card" style="cursor: pointer;" data-folder-id="${folder.id}">
                        <div class="card-body text-center position-relative">
                            <button class="btn btn-sm btn-link position-absolute top-0 end-0 text-muted" 
                                    onclick="event.stopPropagation(); editFolder(${folder.id}, '${escapeHtml(folder.name)}', '${escapeHtml(folder.description || '')}', '${folder.color}')">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <i class="bi bi-folder-fill fs-1" style="color: ${folder.color || '#FFC107'}"></i>
                            <h6 class="mt-2 mb-1">${escapeHtml(folder.name)}</h6>
                            <small class="text-muted">${folder.documentCount} documents</small>
                            ${folder.childFolderCount > 0 ? `<br><small class="text-muted">${folder.childFolderCount} subfolders</small>` : ''}
                        </div>
                    </div>
                </div>
            `;
        });

        // Add "Create Folder" card
        html += `
            <div class="col-md-3 col-sm-4 col-6 mb-4">
                <div class="card h-100 border-dashed" style="cursor: pointer; border-style: dashed !important;" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <i class="bi bi-plus-circle fs-1 text-muted"></i>
                        <h6 class="mt-2 mb-0 text-muted">New Folder</h6>
                    </div>
                </div>
            </div>
        `;

        container.innerHTML = html;

        // Add click handlers
        document.querySelectorAll('.folder-card').forEach(card => {
            card.addEventListener('click', function() {
                const folderId = this.dataset.folderId;
                navigateToFolder(parseInt(folderId));
            });
        });
    }

    async function loadDocumentsInFolder(folderId) {
        const section = document.getElementById('documents-section');
        const tbody = document.getElementById('documents-table-body');

        try {
            const response = await fetch(`/api/DocumentApi/my-documents?folderId=${folderId}`);
            const data = await response.json();

            if (data.success && data.documents.length > 0) {
                section.style.display = 'block';
                tbody.innerHTML = data.documents.map(doc => `
                    <tr>
                        <td>
                            <i class="bi ${getFileIcon(doc.fileExtension)}"></i>
                            ${escapeHtml(doc.title || doc.originalFileName)}
                        </td>
                        <td><span class="badge ${getStatusBadge(doc.status)}">${doc.status}</span></td>
                        <td>${formatDate(doc.createdAt)}</td>
                        <td>
                            <a href="/api/DocumentApi/${doc.id}/download" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-download"></i>
                            </a>
                            <a href="/Document/Details/${doc.id}" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                `).join('');
            } else {
                section.style.display = 'none';
            }
        } catch (error) {
            console.error('Error loading documents:', error);
            section.style.display = 'none';
        }
    }

    function navigateToFolder(folderId) {
        if (folderId === null) {
            currentFolderId = null;
            breadcrumbPath = [];
            updateBreadcrumb();
            loadFolders();
        } else {
            fetch(`/api/FolderApi/${folderId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        currentFolderId = folderId;
                        breadcrumbPath = data.folder.breadcrumbs;
                        updateBreadcrumb();
                        loadFolders(folderId);
                    }
                });
        }
    }

    function updateBreadcrumb() {
        const breadcrumb = document.getElementById('folder-breadcrumb');
        let html = '<li class="breadcrumb-item"><a href="#" onclick="navigateToFolder(null); return false;">Root</a></li>';

        breadcrumbPath.forEach((item, index) => {
            if (index === breadcrumbPath.length - 1) {
                html += `<li class="breadcrumb-item active">${escapeHtml(item.name)}</li>`;
            } else {
                html += `<li class="breadcrumb-item"><a href="#" onclick="navigateToFolder(${item.id}); return false;">${escapeHtml(item.name)}</a></li>`;
            }
        });

        breadcrumb.innerHTML = html;
    }

    async function createFolder() {
        const btn = document.getElementById('createFolderBtn');
        const spinner = document.getElementById('createSpinner');

        btn.disabled = true;
        spinner.classList.remove('d-none');

        try {
            const response = await fetch('/api/FolderApi', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    folderName: document.getElementById('folderName').value,
                    description: document.getElementById('folderDescription').value,
                    color: document.getElementById('selectedColor').value,
                    parentFolderId: currentFolderId
                })
            });

            const data = await response.json();

            if (data.success) {
                bootstrap.Modal.getInstance(document.getElementById('createFolderModal')).hide();
                document.getElementById('createFolderForm').reset();
                showSuccess('Folder created successfully');
                loadFolders(currentFolderId);
            } else {
                showError(data.message || 'Failed to create folder');
            }
        } catch (error) {
            console.error('Error creating folder:', error);
            showError('Error creating folder');
        } finally {
            btn.disabled = false;
            spinner.classList.add('d-none');
        }
    }

    function editFolder(id, name, description, color) {
        document.getElementById('editFolderId').value = id;
        document.getElementById('editFolderName').value = name;
        document.getElementById('editFolderDescription').value = description;
        document.getElementById('editSelectedColor').value = color;

        document.querySelectorAll('.edit-color-btn').forEach(btn => {
            btn.classList.remove('active', 'border', 'border-dark');
            if (btn.dataset.color === color) {
                btn.classList.add('active', 'border', 'border-dark');
            }
        });

        new bootstrap.Modal(document.getElementById('editFolderModal')).show();
    }

    async function updateFolder() {
        const id = document.getElementById('editFolderId').value;

        try {
            const response = await fetch(`/api/FolderApi/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    folderName: document.getElementById('editFolderName').value,
                    description: document.getElementById('editFolderDescription').value,
                    color: document.getElementById('editSelectedColor').value
                })
            });

            const data = await response.json();

            if (data.success) {
                bootstrap.Modal.getInstance(document.getElementById('editFolderModal')).hide();
                showSuccess('Folder updated successfully');
                loadFolders(currentFolderId);
            } else {
                showError(data.message || 'Failed to update folder');
            }
        } catch (error) {
            console.error('Error updating folder:', error);
            showError('Error updating folder');
        }
    }

    async function deleteFolder() {
        const id = document.getElementById('editFolderId').value;

        try {
            const response = await fetch(`/api/FolderApi/${id}`, {
                method: 'DELETE'
            });

            const data = await response.json();

            if (data.success) {
                bootstrap.Modal.getInstance(document.getElementById('editFolderModal')).hide();
                showSuccess('Folder deleted successfully');
                loadFolders(currentFolderId);
            } else {
                showError(data.message || 'Failed to delete folder');
            }
        } catch (error) {
            console.error('Error deleting folder:', error);
            showError('Error deleting folder');
        }
    }

    function getFileIcon(ext) {
        const icons = {
            '.pdf': 'bi-file-pdf text-danger',
            '.doc': 'bi-file-word text-primary',
            '.docx': 'bi-file-word text-primary',
            '.xls': 'bi-file-excel text-success',
            '.xlsx': 'bi-file-excel text-success',
            '.ppt': 'bi-file-ppt text-warning',
            '.pptx': 'bi-file-ppt text-warning',
            '.jpg': 'bi-file-image text-info',
            '.jpeg': 'bi-file-image text-info',
            '.png': 'bi-file-image text-info',
            '.gif': 'bi-file-image text-info'
        };
        return icons[ext?.toLowerCase()] || 'bi-file-earmark text-secondary';
    }

    function getStatusBadge(status) {
        const badges = {
            'Pending': 'bg-warning text-dark',
            'UnderReview': 'bg-info',
            'Approved': 'bg-success',
            'Rejected': 'bg-danger',
            'Completed': 'bg-primary',
            'Archived': 'bg-secondary'
        };
        return badges[status] || 'bg-secondary';
    }

    function formatDate(dateStr) {
        if (!dateStr) return '-';
        return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    function showSuccess(message) {
        alert(message);
    }

    function showError(message) {
        alert('Error: ' + message);
    }
</script>
}
