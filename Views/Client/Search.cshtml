@{
    ViewData["Title"] = "Search";
    Layout = "_ClientLayout";
}

<div class="mb-4">
    <h4 class="mb-0">Search Documents</h4>
    <p class="text-muted mb-0">Search through your documents</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <input type="text" class="form-control form-control-lg" placeholder="Search by name, type, or content...">
            </div>
            <div class="col-md-2">
                <select class="form-select form-select-lg">
                    <option value="">All Types</option>
                    <option>Contract</option>
                    <option>Agreement</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0">Search Results</h5>
    </div>
    <div class="card-body text-center text-muted py-5">
        <i class="bi bi-search fs-1"></i>
        <p class="mt-2">Enter search terms to find documents</p>
    </div>
</div>
