@{
    ViewData["Title"] = "Reports";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Reports</h4>
        <p class="text-muted mb-0">Generate and view reports</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-bar-graph text-primary fs-1"></i>
                <h5 class="mt-3">Document Report</h5>
                <p class="text-muted">Document statistics and trends</p>
                <a href="#" class="btn btn-primary">Generate</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="bi bi-people text-success fs-1"></i>
                <h5 class="mt-3">User Activity Report</h5>
                <p class="text-muted">User actions and engagement</p>
                <a href="#" class="btn btn-success">Generate</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="bi bi-clipboard-check text-warning fs-1"></i>
                <h5 class="mt-3">Compliance Report</h5>
                <p class="text-muted">Retention and compliance status</p>
                <a href="#" class="btn btn-warning">Generate</a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0">Recent Reports</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Report Name</th>
                    <th>Type</th>
                    <th>Generated By</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Monthly Document Report - Jan 2024</td>
                    <td>Document</td>
                    <td>Admin</td>
                    <td>Jan 31, 2024</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-secondary"><i class="bi bi-download"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
