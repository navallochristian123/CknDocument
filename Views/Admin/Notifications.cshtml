@{
    ViewData["Title"] = "Notifications";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Notifications</h4>
        <p class="text-muted mb-0">Your notifications</p>
    </div>
    <a href="#" class="btn btn-outline-secondary">
        <i class="bi bi-check-all"></i> Mark All as Read
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a href="#" class="list-group-item list-group-item-action bg-light">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-file-earmark-check text-success me-2"></i>
                        <strong>Document Approved</strong>
                    </div>
                    <small class="text-muted">2 hours ago</small>
                </div>
                <p class="mb-0 text-muted">Contract_Smith.pdf has been approved by Jane Smith</p>
            </a>
            <a href="#" class="list-group-item list-group-item-action bg-light">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-person-plus text-primary me-2"></i>
                        <strong>New User Registered</strong>
                    </div>
                    <small class="text-muted">5 hours ago</small>
                </div>
                <p class="mb-0 text-muted">Mike Johnson has registered as a new client</p>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <div>
                        <i class="bi bi-clock text-warning me-2"></i>
                        <strong>Document Expiring Soon</strong>
                    </div>
                    <small class="text-muted">1 day ago</small>
                </div>
                <p class="mb-0 text-muted">5 documents are expiring within 30 days</p>
            </a>
        </div>
    </div>
</div>
