@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Roles & Permissions</h4>
        <p class="text-muted mb-0">Manage user roles and permissions</p>
    </div>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Role
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-person-badge"></i> Staff</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Standard staff members with document access</p>
                <h6>Permissions:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> View Documents</li>
                    <li><i class="bi bi-check-circle text-success"></i> Upload Documents</li>
                    <li><i class="bi bi-check-circle text-success"></i> Review Documents</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Delete Documents</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Manage Users</li>
                </ul>
                <a href="#" class="btn btn-outline-success btn-sm">Edit Permissions</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header text-white" style="background-color: #a855f7;">
                <h5 class="mb-0"><i class="bi bi-person"></i> Client</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">External clients with limited access</p>
                <h6>Permissions:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> View Own Documents</li>
                    <li><i class="bi bi-check-circle text-success"></i> Upload Documents</li>
                    <li><i class="bi bi-check-circle text-success"></i> Download Documents</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Review Documents</li>
                    <li><i class="bi bi-x-circle text-danger"></i> View Others' Documents</li>
                </ul>
                <a href="#" class="btn btn-outline-secondary btn-sm">Edit Permissions</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-shield-check"></i> Auditor</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Read-only access for compliance</p>
                <h6>Permissions:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> View All Documents</li>
                    <li><i class="bi bi-check-circle text-success"></i> View Audit Logs</li>
                    <li><i class="bi bi-check-circle text-success"></i> Generate Reports</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Modify Documents</li>
                    <li><i class="bi bi-x-circle text-danger"></i> Delete Documents</li>
                </ul>
                <a href="#" class="btn btn-outline-warning btn-sm">Edit Permissions</a>
            </div>
        </div>
    </div>
</div>
