@{
    ViewData["Title"] = "Reviews";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Document Reviews</h4>
        <p class="text-muted mb-0">Manage document review workflow</p>
    </div>
</div>

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link active" href="#">All Reviews</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Pending <span class="badge bg-warning">8</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Approved</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Rejected</a>
    </li>
</ul>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Document</th>
                    <th>Submitted By</th>
                    <th>Reviewer</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><i class="bi bi-file-pdf text-danger"></i> Contract_Smith.pdf</td>
                    <td>John Doe</td>
                    <td>Jane Smith</td>
                    <td>Jan 20, 2024</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-success"><i class="bi bi-check"></i> Approve</a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-x"></i> Reject</a>
                    </td>
                </tr>
                <tr>
                    <td><i class="bi bi-file-word text-primary"></i> Brief_Case123.docx</td>
                    <td>Mike Johnson</td>
                    <td>Jane Smith</td>
                    <td>Jan 18, 2024</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> View</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
