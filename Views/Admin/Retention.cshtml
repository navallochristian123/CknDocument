@{
    ViewData["Title"] = "Retention Policies";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Retention Policies</h4>
        <p class="text-muted mb-0">Manage document retention and expiry</p>
    </div>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Policy
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h6>Expiring This Month</h6>
                <h2>5</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h6>Expiring in 90 Days</h6>
                <h2>12</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h6>Active Policies</h6>
                <h2>4</h2>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0">Retention Policies</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Policy Name</th>
                    <th>Retention Period</th>
                    <th>Document Types</th>
                    <th>Documents</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Standard Contracts</td>
                    <td>7 years</td>
                    <td>Contracts, Agreements</td>
                    <td>156</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Legal Briefs</td>
                    <td>10 years</td>
                    <td>Briefs, Motions</td>
                    <td>89</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
