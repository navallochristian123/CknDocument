@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Users</h4>
        <p class="text-muted mb-0">Manage staff, clients, and auditors</p>
    </div>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Add User
    </a>
</div>

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link active" href="#">All Users</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Staff</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Clients</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Auditors</a>
    </li>
</ul>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Last Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded-circle p-2 me-2">JD</div>
                            John Doe
                        </div>
                    </td>
                    <td>john.doe@email.com</td>
                    <td><span class="badge bg-success">Staff</span></td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>2 hours ago</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                            <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="bg-info text-white rounded-circle p-2 me-2">AC</div>
                            Alice Client
                        </div>
                    </td>
                    <td>alice@client.com</td>
                    <td><span class="badge bg-purple" style="background-color: #a855f7;">Client</span></td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>1 day ago</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                            <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
