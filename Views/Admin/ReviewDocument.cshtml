    async function loadDocumentInViewer(docId, versionId) {
        document.getElementById('viewerLoading').style.display = 'block';
        document.getElementById('documentIframe').style.display = 'none';
        document.getElementById('documentTextViewer').style.display = 'none';
        document.getElementById('documentImageViewer').style.display = 'none';
        
        const version = documentVersions.find(v => v.versionId == versionId) || documentVersions[0];
        if (version) {
            document.getElementById('viewerVersionLabel').textContent = `v${version.versionNumber}`;
            document.getElementById('viewerVersionInfo').textContent = `${version.changedBy || 'Client'} - ${formatDate(version.createdAt)}`;
            document.getElementById('btnDownloadFromViewer').href = `/api/DocumentApi/${docId}/download?versionId=${versionId}`;
        }
        
        const extension = (documentData.fileExtension || '').toLowerCase();
        const viewUrl = `/api/DocumentApi/${docId}/view?versionId=${versionId}`;
        
        try {
            if (['.pdf'].includes(extension)) {
                document.getElementById('documentIframe').src = viewUrl;
                document.getElementById('viewerLoading').style.display = 'none';
                document.getElementById('documentIframe').style.display = 'block';
            } else if (['.jpg', '.jpeg', '.png', '.gif', '.webp', '.bmp'].includes(extension)) {
                document.getElementById('documentImage').src = viewUrl;
                document.getElementById('documentImage').onload = () => {
                    document.getElementById('viewerLoading').style.display = 'none';
                    document.getElementById('documentImageViewer').style.display = 'block';
                };
            } else {
                const response = await fetch(`/api/DocumentApi/${docId}/text-content?versionId=${versionId}`);
                const data = await response.json();
                
                if (data.success && data.content) {
                    document.getElementById('documentTextViewer').textContent = data.content;
                    document.getElementById('viewerLoading').style.display = 'none';
                    document.getElementById('documentTextViewer').style.display = 'block';
                } else {
                    document.getElementById('documentTextViewer').innerHTML = `
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark-x display-1 text-muted"></i>
                            <p class="mt-3">Preview not available for this file type.</p>
                            <a href="${viewUrl}" class="btn btn-primary" target="_blank">
                                <i class="bi bi-box-arrow-up-right"></i> Open in New Tab
                            </a>
                        </div>
                    `;
                    document.getElementById('viewerLoading').style.display = 'none';
                    document.getElementById('documentTextViewer').style.display = 'block';
                }
            }
        } catch (error) {
            console.error('Error loading document:', error);
            document.getElementById('documentTextViewer').innerHTML = `
                <div class="text-center py-5 text-danger">
                    <i class="bi bi-exclamation-triangle display-1"></i>
                    <p class="mt-3">Error loading document preview.</p>
                </div>
            `;
            document.getElementById('viewerLoading').style.display = 'none';
            document.getElementById('documentTextViewer').style.display = 'block';
        }
    }

    // ===== VERSION COMPARE FUNCTIONS =====
    
    function showVersionCompareModal() {
        if (documentVersions.length === 0) {
            alert('No versions available.');
            return;
        }
        
        // Populate version dropdowns
        const versionOptions = documentVersions.map(v => 
            `<option value="${v.versionId}">v${v.versionNumber} - ${v.changedBy || 'Client'} (${formatDate(v.createdAt)})</option>`
        ).join('');
        
        document.getElementById('compareLeftVersion').innerHTML = '<option value="">Select version...</option>' + versionOptions;
        document.getElementById('compareRightVersion').innerHTML = '<option value="">Select version...</option>' + versionOptions;
        
        // If we have 2+ versions, pre-select v1 (oldest) and latest
        if (documentVersions.length >= 2) {
            const oldestVersion = documentVersions[documentVersions.length - 1]; // oldest is last (sorted desc)
            const newestVersion = documentVersions[0]; // newest is first
            
            document.getElementById('compareLeftVersion').value = oldestVersion.versionId;
            document.getElementById('compareRightVersion').value = newestVersion.versionId;
        }
        
        // Populate compact timeline
        const timeline = document.getElementById('versionTimelineCompact');
        timeline.innerHTML = documentVersions.map(v => `
            <span class="badge ${v.isCurrentVersion ? 'bg-primary' : 'bg-secondary'} p-2">
                v${v.versionNumber} - ${v.changedBy || 'Client'}
                <small class="d-block">${v.changeDescription || 'Initial'}</small>
            </span>
        `).join('');
        
        new bootstrap.Modal(document.getElementById('versionCompareModal')).show();
        
        // Load pre-selected versions after modal opens
        setTimeout(() => loadCompareVersions(), 300);
    }

    function loadCompareVersions() {
        const leftVersionId = document.getElementById('compareLeftVersion').value;
        const rightVersionId = document.getElementById('compareRightVersion').value;
        
        if (leftVersionId) {
            loadVersionIntoComparePanel('left', leftVersionId);
        }
        if (rightVersionId) {
            loadVersionIntoComparePanel('right', rightVersionId);
        }
    }

    function loadVersionIntoComparePanel(side, versionId) {
        const version = documentVersions.find(v => v.versionId == versionId);
        if (!version) return;
        
        const labelEl = document.getElementById(`compare${capitalize(side)}Label`);
        const infoEl = document.getElementById(`compare${capitalize(side)}Info`);
        const viewerEl = document.getElementById(`compare${capitalize(side)}Viewer`);
        const iframeEl = document.getElementById(`compare${capitalize(side)}Iframe`);
        const imageContainerEl = document.getElementById(`compare${capitalize(side)}Image`);
        const imgEl = document.getElementById(`compare${capitalize(side)}Img`);
        
        labelEl.textContent = `Version ${version.versionNumber}`;
        infoEl.textContent = `${version.changedBy || 'Client'} - ${version.changeDescription || 'Initial upload'}`;
        
        const viewUrl = `/api/DocumentApi/${documentData.id}/view?versionId=${versionId}`;
        const extension = (documentData.fileExtension || '').toLowerCase();
        
        // Hide all viewers
        viewerEl.style.display = 'none';
        iframeEl.style.display = 'none';
        imageContainerEl.style.display = 'none';
        
        if (['.pdf'].includes(extension)) {
            iframeEl.src = viewUrl;
            iframeEl.style.display = 'block';
        } else if (['.jpg', '.jpeg', '.png', '.gif', '.webp', '.bmp'].includes(extension)) {
            imgEl.src = viewUrl;
            imageContainerEl.style.display = 'block';
        } else {
            // For other files, show in iframe (text files) or show unsupported message
            iframeEl.src = viewUrl;
            iframeEl.style.display = 'block';
        }
    }

    function capitalize(str) {
        return str.charAt(0).toUpperCase() + str.slice(1);
    }

