@{
    ViewData["Title"] = "Review Document";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Review">Reviews</a></li>
                <li class="breadcrumb-item active">Review Document</li>
            </ol>
        </nav>
        <h4 class="mb-0 mt-2">Admin Document Review</h4>
    </div>
    <a href="/Review" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reviews
    </a>
</div>

<div class="row">
    <!-- Left Column - Document Info & Preview -->
    <div class="col-lg-5">
        <!-- Document Information -->
        <div class="card border mb-3">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="bi bi-file-earmark-text me-2 text-primary"></i>Document Information</h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-3" id="loadingDoc">
                    <div class="spinner-border text-primary"></div>
                </div>
                <div id="documentInfo" style="display: none;">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8" id="docTitle">-</dd>
                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary" id="docType">-</span></dd>
                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8" id="docCategory">-</dd>
                        <dt class="col-sm-4">File:</dt>
                        <dd class="col-sm-8" id="docFileName">-</dd>
                        <dt class="col-sm-4">Size:</dt>
                        <dd class="col-sm-8" id="docFileSize">-</dd>
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8"><span class="badge" id="docStatus">-</span></dd>
                        <dt class="col-sm-4">Submitted:</dt>
                        <dd class="col-sm-8" id="docSubmittedDate">-</dd>
                        <dt class="col-sm-4">By:</dt>
                        <dd class="col-sm-8" id="docSubmitter">-</dd>
                        <dt class="col-sm-4">Client:</dt>
                        <dd class="col-sm-8" id="docClient">-</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Document Actions -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <button class="btn btn-primary w-100" onclick="openDocumentViewer()">
                            <i class="bi bi-eye"></i> View Inline
                        </button>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-outline-secondary w-100" id="btnDownloadDoc">
                            <i class="bi bi-download"></i> Download
                        </a>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-outline-info w-100" onclick="showVersionCompareModal()">
                            <i class="bi bi-git me-1"></i> Compare All Versions
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Analysis Panel -->
        <div class="card mb-3 border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="bi bi-robot me-2"></i>AI Document Analysis</h6>
            </div>
            <div class="card-body" id="aiAnalysisPanel">
                <div class="text-center py-3" id="aiLoading">
                    <div class="spinner-border spinner-border-sm text-warning"></div>
                    <p class="text-muted mt-2 mb-0 small">Loading AI analysis...</p>
                </div>
                <div id="aiContent" style="display: none;">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <strong class="small">Detected Type:</strong>
                            <span class="badge bg-info" id="aiDocType">-</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <strong class="small">Confidence:</strong>
                            <span id="aiConfidence" class="small">-</span>
                        </div>
                        <div class="mt-2">
                            <strong class="small d-block mb-1">AI Summary:</strong>
                            <p class="small text-muted mb-0" id="aiSummary">-</p>
                        </div>
                    </div>
                    <div class="mb-3" id="aiChecklistSection" style="display: none;">
                        <strong class="small d-block mb-2"><i class="bi bi-list-check me-1"></i>AI Checklist:</strong>
                        <div id="aiChecklist" class="border rounded p-2" style="max-height: 200px; overflow-y: auto;"></div>
                    </div>
                    <div class="mb-3" id="aiIssuesSection" style="display: none;">
                        <strong class="small d-block mb-2"><i class="bi bi-exclamation-triangle me-1"></i>Issues Found:</strong>
                        <div id="aiIssues" style="max-height: 200px; overflow-y: auto;"></div>
                    </div>
                    <div class="mb-2" id="aiMissingSection" style="display: none;">
                        <strong class="small d-block mb-2"><i class="bi bi-patch-question me-1"></i>Missing Items:</strong>
                        <div id="aiMissing" style="max-height: 150px; overflow-y: auto;"></div>
                    </div>
                    <div class="text-end mt-2">
                        <small class="text-muted" id="aiMeta">-</small>
                    </div>
                </div>
                <div id="aiNoData" style="display: none;">
                    <p class="text-muted small mb-0"><i class="bi bi-info-circle me-1"></i>No AI analysis available.</p>
                </div>
            </div>
        </div>

        <!-- Version History with Full Details -->
        <div class="card mb-3 border-primary">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Version History & Changes</h6>
                <span class="badge bg-light text-primary" id="versionCount">0</span>
            </div>
            <div class="card-body p-0" style="max-height: 350px; overflow-y: auto;">
                <div id="versionsListLoading" class="text-center p-3">
                    <div class="spinner-border spinner-border-sm"></div>
                </div>
                <ul class="list-group list-group-flush" id="versionsList"></ul>
            </div>
        </div>

        <!-- Document Workflow Trail -->
        <div class="card mb-3 border-success">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="bi bi-signpost-split me-2"></i>Workflow Trail</h6>
            </div>
            <div class="card-body p-0" style="max-height: 250px; overflow-y: auto;">
                <div id="workflowTrailList" class="list-group list-group-flush">
                    <div class="list-group-item text-center text-muted">
                        <div class="spinner-border spinner-border-sm"></div> Loading...
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff Review Summary -->
        <div class="card border">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="bi bi-person-check me-2 text-info"></i>Staff Review Summary</h6>
            </div>
            <div class="card-body" id="staffReviewSection">
                <p class="text-muted mb-0">Loading staff review...</p>
            </div>
        </div>
    </div>

    <!-- Right Column - Admin Checklist & Decision -->
    <div class="col-lg-7">
        <!-- Admin Checklist -->
        <div class="card border mb-3">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="bi bi-list-check me-2 text-warning"></i>Admin Review Checklist</h6>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    <i class="bi bi-info-circle me-1"></i>
                    Complete the checklist items below before making your decision. Required items must be checked.
                </p>
                <div id="checklistContainer">
                    <div class="text-center py-3">
                        <div class="spinner-border text-primary"></div>
                        <p class="text-muted mt-2">Loading checklist...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Decision -->
        <div class="card border">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="bi bi-shield-check me-2 text-primary"></i>Admin Final Decision</h6>
            </div>
            <div class="card-body">
                <input type="hidden" id="documentId">
                
                <!-- Checklist Summary -->
                <div class="alert alert-light mb-3" id="checklistSummary">
                    <div class="d-flex justify-content-between">
                        <span>Checklist Progress:</span>
                        <span id="checklistProgress">0 / 0 completed</span>
                    </div>
                    <div class="progress mt-2" style="height: 10px;">
                        <div class="progress-bar" id="checklistProgressBar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <!-- Version Selection for Approval -->
                <div class="card bg-light mb-3" id="versionSelectionCard" style="display: none;">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-git me-2"></i>Select Version to Approve</h6>
                        <p class="text-muted small mb-2">Multiple versions exist. Choose which version to approve as final.</p>
                        <select class="form-select mb-3" id="approveVersionSelect">
                            <!-- Options populated dynamically -->
                        </select>
                        
                        <div class="accordion" id="adminEditAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#adminUploadCollapse">
                                        <i class="bi bi-cloud-upload me-2"></i>Upload Corrected Version (Create New Version)
                                    </button>
                                </h2>
                                <div id="adminUploadCollapse" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <p class="text-muted small">If both existing versions have issues, upload a corrected file to create a new version.</p>
                                        <div class="mb-3">
                                            <label class="form-label">Upload Corrected File</label>
                                            <input type="file" class="form-control" id="adminEditFile">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Change Description <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="adminEditDescription" placeholder="Describe corrections made...">
                                        </div>
                                        <button type="button" class="btn btn-warning" id="btnAdminUploadVersion">
                                            <i class="bi bi-upload"></i> Upload & Create New Version
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Admin Remarks (Visible to Client) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Admin Remarks <span class="text-muted">(Visible to Client - Required for Rejection)</span></label>
                    <textarea class="form-control" id="adminRemarks" rows="3" placeholder="Enter remarks visible to client about document changes or reasons..."></textarea>
                    <small class="text-info"><i class="bi bi-eye me-1"></i>Client will see these remarks and be notified of any changes.</small>
                </div>

                <!-- Notify Client Checkbox -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="notifyClient" checked>
                    <label class="form-check-label" for="notifyClient">
                        <i class="bi bi-bell me-1"></i>Notify client about this decision
                    </label>
                </div>

                <!-- Decision Buttons -->
                <div class="row g-2">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-success btn-lg w-100" id="btnApprove" disabled>
                            <i class="bi bi-check-circle me-2"></i>Approve Document
                        </button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-danger btn-lg w-100" id="btnReject">
                            <i class="bi bi-x-circle me-2"></i>Reject Document
                        </button>
                    </div>
                </div>

                <div class="alert alert-info mt-3 mb-0 small">
                    <i class="bi bi-lightbulb me-1"></i>
                    <strong>Tip:</strong> Approving will set retention period based on document type. Rejection requires remarks explaining the reason.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approval Success Modal with Retention Info -->
<div class="modal fade" id="approvalSuccessModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-bottom">
                <h5 class="modal-title"><i class="bi bi-check-circle me-2 text-success"></i>Document Approved</h5>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h5 class="text-center mb-3" id="approvedDocTitle">Document</h5>
                
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-clock-history me-2"></i>Retention Information</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Retention Period:</dt>
                            <dd class="col-sm-7" id="retentionPeriod">-</dd>
                            <dt class="col-sm-5">Start Date:</dt>
                            <dd class="col-sm-7" id="retentionStart">-</dd>
                            <dt class="col-sm-5">Expiry Date:</dt>
                            <dd class="col-sm-7" id="retentionExpiry">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="/Review" class="btn btn-secondary">Back to Reviews</a>
                <button type="button" class="btn btn-primary" onclick="location.reload()">Review Another</button>
            </div>
        </div>
    </div>
</div>

<!-- Rejection Confirmation Modal -->
<div class="modal fade" id="rejectConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-bottom">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2 text-danger"></i>Confirm Rejection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reject this document?</p>
                <div class="alert alert-warning">
                    <strong>Reason:</strong>
                    <p class="mb-0" id="rejectReasonPreview">-</p>
                </div>
                <p class="text-muted small">The document will be archived and the submitter will be notified.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRejectBtn">
                    <i class="bi bi-x-circle me-1"></i>Confirm Rejection
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Document Viewer Modal -->
<div class="modal fade" id="documentViewerModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-fullscreen-lg-down">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-eye me-2"></i>Document Preview - <span id="viewerDocTitle"></span></h5>
                <div>
                    <select class="form-select form-select-sm d-inline-block w-auto me-2" id="viewerVersionSelect">
                        <option value="">Current Version</option>
                    </select>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
            </div>
            <div class="modal-body p-0" style="height: 75vh; overflow: auto;">
                <div class="text-center py-5" id="viewerLoading">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-2">Loading document...</p>
                </div>
                <iframe id="documentIframe" class="w-100 h-100 border-0" style="display: none;"></iframe>
                <div id="documentTextViewer" class="p-4" style="display: none; white-space: pre-wrap; font-family: monospace; background: #f8f9fa;"></div>
                <div id="documentImageViewer" class="text-center p-4" style="display: none;">
                    <img id="documentImage" style="max-width: 100%; max-height: 70vh;" />
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <span class="badge bg-info me-2" id="viewerVersionLabel">v1</span>
                    <small class="text-muted" id="viewerVersionInfo">-</small>
                </div>
                <div>
                    <a href="#" class="btn btn-outline-secondary" id="btnDownloadFromViewer">
                        <i class="bi bi-download"></i> Download
                    </a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Version Compare Modal - Side by Side -->
<div class="modal fade" id="versionCompareModal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"><i class="bi bi-git me-2"></i>Version Comparison</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <!-- Version Selection Row -->
                <div class="bg-light p-3 border-bottom">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <label class="form-label fw-bold">Version 1 (Original):</label>
                            <select class="form-select" id="compareLeftVersion" onchange="loadCompareVersions()">
                                <option value="">Select version...</option>
                            </select>
                        </div>
                        <div class="col-md-2 text-center">
                            <i class="bi bi-arrow-left-right display-6 text-muted"></i>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label fw-bold">Version 2 (Modified):</label>
                            <select class="form-select" id="compareRightVersion" onchange="loadCompareVersions()">
                                <option value="">Select version...</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- Side by Side Comparison -->
                <div class="row g-0" style="height: calc(100vh - 200px);">
                    <!-- Left Version -->
                    <div class="col-6 border-end h-100">
                        <div class="bg-primary text-white p-2 text-center">
                            <span id="compareLeftLabel">Version 1</span>
                            <small class="d-block" id="compareLeftInfo">Select a version</small>
                        </div>
                        <div id="compareLeftViewer" class="h-100 position-relative" style="overflow: auto;">
                            <div class="text-center py-5">
                                <i class="bi bi-file-earmark display-1 text-muted"></i>
                                <p class="text-muted">Select a version to compare</p>
                            </div>
                        </div>
                        <iframe id="compareLeftIframe" class="w-100 h-100 border-0" style="display: none;"></iframe>
                        <div id="compareLeftImage" class="text-center p-4 h-100" style="display: none; overflow: auto;">
                            <img id="compareLeftImg" style="max-width: 100%;" />
                        </div>
                    </div>
                    
                    <!-- Right Version -->
                    <div class="col-6 h-100">
                        <div class="bg-success text-white p-2 text-center">
                            <span id="compareRightLabel">Version 2</span>
                            <small class="d-block" id="compareRightInfo">Select a version</small>
                        </div>
                        <div id="compareRightViewer" class="h-100 position-relative" style="overflow: auto;">
                            <div class="text-center py-5">
                                <i class="bi bi-file-earmark display-1 text-muted"></i>
                                <p class="text-muted">Select a version to compare</p>
                            </div>
                        </div>
                        <iframe id="compareRightIframe" class="w-100 h-100 border-0" style="display: none;"></iframe>
                        <div id="compareRightImage" class="text-center p-4 h-100" style="display: none; overflow: auto;">
                            <img id="compareRightImg" style="max-width: 100%;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-light justify-content-between">
                <div>
                    <h6 class="mb-1"><i class="bi bi-clock-history me-2"></i>Version Timeline</h6>
                    <div id="versionTimelineCompact" class="d-flex flex-wrap gap-2">
                        <!-- Compact timeline will be populated -->
                    </div>
                </div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let documentData = null;
    let checklistItems = [];
    let checklistResults = {};
    let documentVersions = [];

    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const docId = urlParams.get('documentId') || getDocIdFromPath();
        
        if (docId) {
            document.getElementById('documentId').value = docId;
            loadDocument(docId);
            loadChecklist(docId);
            loadWorkflowTrail(docId);
        } else {
            showError('No document ID provided');
        }

        document.getElementById('btnApprove').addEventListener('click', approveDocument);
        document.getElementById('btnReject').addEventListener('click', showRejectConfirm);
        document.getElementById('confirmRejectBtn').addEventListener('click', rejectDocument);
        document.getElementById('viewerVersionSelect').addEventListener('change', onViewerVersionChange);
        document.getElementById('btnAdminUploadVersion').addEventListener('click', adminUploadNewVersion);
    });

    function getDocIdFromPath() {
        const pathParts = window.location.pathname.split('/');
        const reviewIndex = pathParts.findIndex(p => p.toLowerCase() === 'review');
        if (reviewIndex !== -1 && pathParts.length > reviewIndex + 1) {
            return pathParts[reviewIndex + 1];
        }
        return null;
    }

    async function loadDocument(docId) {
        try {
            const response = await fetch(`/api/DocumentApi/${docId}`);
            const data = await response.json();

            if (data.success) {
                documentData = data.document;
                displayDocumentInfo(documentData);
                loadVersions(docId);
                loadStaffReview(docId);
                loadAIAnalysis(docId);
            } else {
                showError(data.message || 'Failed to load document');
            }
        } catch (error) {
            console.error('Error loading document:', error);
            showError('Error loading document');
        }
    }

    function displayDocumentInfo(doc) {
        document.getElementById('loadingDoc').style.display = 'none';
        document.getElementById('documentInfo').style.display = 'block';

        document.getElementById('docTitle').textContent = doc.title || doc.originalFileName || '-';
        document.getElementById('docType').textContent = doc.documentType || 'General';
        document.getElementById('docCategory').textContent = doc.category || '-';
        document.getElementById('docFileName').textContent = doc.originalFileName || '-';
        document.getElementById('docFileSize').textContent = formatFileSize(doc.totalFileSize || doc.fileSize);
        
        const statusBadge = document.getElementById('docStatus');
        statusBadge.textContent = doc.status || 'Unknown';
        statusBadge.className = 'badge ' + getStatusBadgeClass(doc.status);

        document.getElementById('docSubmittedDate').textContent = formatDate(doc.createdAt);
        document.getElementById('docSubmitter').textContent = doc.uploader?.name || doc.uploaderName || '-';
        document.getElementById('docClient').textContent = doc.clientName || doc.folder?.clientName || doc.uploader?.name || '-';

        // Set action buttons
        document.getElementById('btnDownloadDoc').href = `/api/DocumentApi/${doc.id}/download`;
    }

    async function loadVersions(docId) {
        try {
            const response = await fetch(`/api/DocumentApi/${docId}/versions`);
            const data = await response.json();

            document.getElementById('versionsListLoading').style.display = 'none';
            const list = document.getElementById('versionsList');
            
            if (data.success && data.versions?.length > 0) {
                documentVersions = data.versions;
                document.getElementById('versionCount').textContent = data.versions.length;
                
                list.innerHTML = data.versions.map((v, i) => `
                    <li class="list-group-item ${i === 0 ? 'bg-light border-primary' : ''}">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="d-flex align-items-center">
                                    <strong>v${v.versionNumber}</strong>
                                    ${i === 0 ? '<span class="badge bg-primary ms-2">Current</span>' : '<span class="badge bg-secondary ms-2">Previous</span>'}
                                </div>
                                <small class="text-muted">${formatDate(v.createdAt)}</small>
                                <br>
                                <small class="text-info fw-bold"><i class="bi bi-person me-1"></i>${escapeHtml(v.changedBy || 'Client')}</small>
                                ${v.changeDescription ? `<br><small class="text-secondary">${escapeHtml(v.changeDescription)}</small>` : ''}
                            </div>
