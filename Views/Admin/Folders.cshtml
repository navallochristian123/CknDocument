@{
    ViewData["Title"] = "Folders";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Folders</h4>
        <p class="text-muted mb-0">Organize documents by client/matter</p>
    </div>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-folder-plus"></i> Create Folder
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 folder-card" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">Client A - Smith Case</h6>
                <small class="text-muted">24 documents</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 folder-card" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">Client B - Johnson</h6>
                <small class="text-muted">18 documents</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 folder-card" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">Client C - Corporate</h6>
                <small class="text-muted">45 documents</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 folder-card" style="cursor: pointer;">
            <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning fs-1"></i>
                <h6 class="mt-2 mb-1">Templates</h6>
                <small class="text-muted">12 documents</small>
            </div>
        </div>
    </div>
</div>
