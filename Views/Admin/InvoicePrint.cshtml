@model CKNDocument.Models.LawFirmDMS.Invoice
@{
    Layout = null;
    var firm = Model.Subscription?.Firm;
    var vatRate = 0.12m;
    var vatAmount = Math.Round((Model.TotalAmount ?? 0) * vatRate / (1 + vatRate), 2);
    var netAmount = (Model.TotalAmount ?? 0) - vatAmount;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice #@(Model.InvoiceNumber ?? Model.InvoiceID.ToString("D4")) - CKN Document</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #333; padding: 40px; max-width: 800px; margin: 0 auto; }
        .invoice-header { display: flex; justify-content: space-between; align-items: flex-start; border-bottom: 3px solid #0d6efd; padding-bottom: 20px; margin-bottom: 30px; }
        .invoice-header h1 { color: #0d6efd; font-size: 2rem; margin-bottom: 4px; }
        .invoice-header .company { text-align: right; }
        .invoice-header .company h3 { margin-bottom: 4px; }
        .invoice-header .company p { color: #666; font-size: 0.85rem; line-height: 1.5; }
        .billing-info { display: flex; justify-content: space-between; margin-bottom: 30px; }
        .billing-info .label { color: #888; font-size: 0.75rem; text-transform: uppercase; font-weight: 600; letter-spacing: 1px; margin-bottom: 6px; }
        .billing-info .value { font-weight: 600; }
        .billing-info .detail-row { margin-bottom: 6px; font-size: 0.9rem; }
        .billing-info .right { text-align: right; }
        table { width: 100%; border-collapse: collapse; margin-bottom: 30px; }
        thead th { background: #f8f9fa; padding: 12px 16px; text-align: left; font-size: 0.8rem; text-transform: uppercase; color: #666; border-bottom: 2px solid #dee2e6; }
        tbody td { padding: 12px 16px; border-bottom: 1px solid #eee; }
        .text-right { text-align: right; }
        .text-center { text-align: center; }
        tfoot td { padding: 8px 16px; }
        .total-row td { font-weight: 700; font-size: 1.1rem; border-top: 2px solid #333; padding-top: 12px; }
        .status-badge { display: inline-block; padding: 4px 14px; border-radius: 20px; font-size: 0.8rem; font-weight: 600; }
        .status-paid { background: #d4edda; color: #155724; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-overdue { background: #f8d7da; color: #721c24; }
        .footer { margin-top: 40px; padding-top: 20px; border-top: 1px solid #eee; text-align: center; color: #888; font-size: 0.8rem; }
        .notes { background: #f8f9fa; padding: 16px; border-radius: 6px; margin-bottom: 20px; }
        .notes h4 { font-size: 0.8rem; text-transform: uppercase; color: #888; margin-bottom: 6px; }
        @@media print {
            body { padding: 20px; }
            .no-print { display: none !important; }
        }
    </style>
</head>
<body>
    <div class="no-print" style="text-align:center; margin-bottom:20px;">
        <button onclick="window.print()" style="padding:10px 30px; background:#0d6efd; color:#fff; border:none; border-radius:6px; cursor:pointer; font-size:1rem;">
            üñ®Ô∏è Print Invoice
        </button>
        <button onclick="window.close()" style="padding:10px 30px; background:#6c757d; color:#fff; border:none; border-radius:6px; cursor:pointer; font-size:1rem; margin-left:10px;">
            Close
        </button>
    </div>

    <div class="invoice-header">
        <div>
            <h1>INVOICE</h1>
            <p style="color:#666; font-size:1.1rem;">#@(Model.InvoiceNumber ?? Model.InvoiceID.ToString("D4"))</p>
        </div>
        <div class="company">
            <h3>CKN Document</h3>
            <p>Document Management System<br />support@ckndocument.com</p>
        </div>
    </div>

    <div class="billing-info">
        <div>
            <div class="label">Bill To</div>
            <div class="value">@(firm?.FirmName ?? "Law Firm")</div>
            <div class="detail-row" style="color:#666;">@(firm?.ContactEmail ?? "")</div>
            <div class="detail-row" style="color:#666;">@(firm?.Address ?? "")</div>
            @if (!string.IsNullOrEmpty(firm?.PhoneNumber))
            {
                <div class="detail-row" style="color:#666;">@firm.PhoneNumber</div>
            }
        </div>
        <div class="right">
            <div class="detail-row"><span style="color:#888;">Invoice Date:</span> <strong>@(Model.InvoiceDate?.ToString("MMMM dd, yyyy") ?? "N/A")</strong></div>
            <div class="detail-row"><span style="color:#888;">Due Date:</span> <strong>@(Model.DueDate?.ToString("MMMM dd, yyyy") ?? "N/A")</strong></div>
            <div class="detail-row" style="margin-top:8px;">
                <span style="color:#888;">Status:</span>
                @switch (Model.Status)
                {
                    case "Paid":
                        <span class="status-badge status-paid">PAID</span>
                        break;
                    case "Overdue":
                        <span class="status-badge status-overdue">OVERDUE</span>
                        break;
                    default:
                        <span class="status-badge status-pending">@Model.Status?.ToUpper()</span>
                        break;
                }
            </div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th class="text-center">Qty</th>
                <th class="text-right">Unit Price</th>
                <th class="text-right">Amount</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.InvoiceItems.Any())
            {
                @foreach (var item in Model.InvoiceItems)
                {
                    <tr>
                        <td>@(item.Description ?? "Subscription")</td>
                        <td class="text-center">@(item.Quantity ?? 1)</td>
                        <td class="text-right">‚Ç±@((item.UnitPrice ?? 0).ToString("N2"))</td>
                        <td class="text-right">‚Ç±@((item.SubTotal ?? 0).ToString("N2"))</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>Monthly Subscription - @(Model.Subscription?.PlanType ?? "Standard")</td>
                    <td class="text-center">1</td>
                    <td class="text-right">‚Ç±@((Model.TotalAmount ?? 0).ToString("N2"))</td>
                    <td class="text-right">‚Ç±@((Model.TotalAmount ?? 0).ToString("N2"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right" style="color:#888;">Subtotal (Net of VAT)</td>
                <td class="text-right">‚Ç±@netAmount.ToString("N2")</td>
            </tr>
            <tr>
                <td colspan="3" class="text-right" style="color:#888;">VAT (12%)</td>
                <td class="text-right">‚Ç±@vatAmount.ToString("N2")</td>
            </tr>
            <tr class="total-row">
                <td colspan="3" class="text-right">Total Amount</td>
                <td class="text-right">‚Ç±@((Model.TotalAmount ?? 0).ToString("N2"))</td>
            </tr>
            @if ((Model.PaidAmount ?? 0) > 0)
            {
                <tr>
                    <td colspan="3" class="text-right" style="color:#198754;">Amount Paid</td>
                    <td class="text-right" style="color:#198754;">-‚Ç±@((Model.PaidAmount ?? 0).ToString("N2"))</td>
                </tr>
                <tr>
                    <td colspan="3" class="text-right"><strong>Balance Due</strong></td>
                    <td class="text-right"><strong style="color:#dc3545;">‚Ç±@((Model.TotalAmount ?? 0 - (Model.PaidAmount ?? 0)).ToString("N2"))</strong></td>
                </tr>
            }
        </tfoot>
    </table>

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="notes">
            <h4>Notes</h4>
            <p>@Model.Notes</p>
        </div>
    }

    <div class="footer">
        <p><strong>CKN Document Management System</strong></p>
        <p>Thank you for your business. Payment processed securely via PayMongo.</p>
        <p>For questions, contact support@ckndocument.com</p>
    </div>
</body>
</html>
