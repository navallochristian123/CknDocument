@model List<CKNDocument.Models.LawFirmDMS.Payment>
@{
    ViewData["Title"] = "Payment History";
    Layout = "_AdminLayout";
}

@section Styles {
<style>
    .status-pill { padding: 4px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
</style>
}

<div class="mb-3">
    <a href="/Billing" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Billing
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Complete Payment History</h5>
        <div>
            <span class="text-muted small">Total Payments: @Model.Count</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Reference</th>
                            <th>Invoice</th>
                            <th>Amount</th>
                            <th>Tax (VAT)</th>
                            <th>Net Amount</th>
                            <th>Method</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>PayMongo ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="small fw-semibold">@(p.PaymentReference ?? "N/A")</td>
                                <td>
                                    @if (p.Invoice != null)
                                    {
                                        <a href="/Billing/Invoice/@p.InvoiceID">
                                            @(p.Invoice.InvoiceNumber ?? $"INV-{p.InvoiceID}")
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="fw-semibold">₱@((p.Amount ?? 0).ToString("N2"))</td>
                                <td class="text-muted">₱@((p.TaxAmount ?? 0).ToString("N2"))</td>
                                <td>₱@((p.NetAmount ?? 0).ToString("N2"))</td>
                                <td>
                                    @switch (p.PaymentMethod?.ToLower())
                                    {
                                        case "gcash":
                                            <span class="badge bg-primary-subtle text-primary"><i class="bi bi-phone me-1"></i>GCash</span>
                                            break;
                                        case "grab_pay":
                                            <span class="badge bg-success-subtle text-success"><i class="bi bi-phone me-1"></i>GrabPay</span>
                                            break;
                                        case "card":
                                            <span class="badge bg-info-subtle text-info"><i class="bi bi-credit-card me-1"></i>Card</span>
                                            break;
                                        case "paymaya":
                                            <span class="badge bg-warning-subtle text-dark"><i class="bi bi-phone me-1"></i>Maya</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary-subtle text-secondary">@(p.PaymentMethod ?? "N/A")</span>
                                            break;
                                    }
                                </td>
                                <td>@(p.PaymentDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                <td>
                                    @switch (p.Status)
                                    {
                                        case "Completed":
                                            <span class="status-pill bg-success text-white">Completed</span>
                                            break;
                                        case "Pending":
                                            <span class="status-pill bg-warning text-dark">Pending</span>
                                            break;
                                        case "Failed":
                                            <span class="status-pill bg-danger text-white">Failed</span>
                                            break;
                                        case "Cancelled":
                                            <span class="status-pill bg-secondary text-white">Cancelled</span>
                                            break;
                                        case "Refunded":
                                            <span class="status-pill bg-info text-white">Refunded</span>
                                            break;
                                        default:
                                            <span class="status-pill bg-secondary text-white">@p.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="small text-muted">@(p.PayMongoPaymentId ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-credit-card fs-1 d-block mb-3 opacity-25"></i>
                <p class="mb-1 fw-semibold">No payments yet</p>
                <p class="small">Your payment transactions will appear here.</p>
            </div>
        }
    </div>
</div>
