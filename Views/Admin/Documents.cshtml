@{
    ViewData["Title"] = "Documents";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">Documents</h4>
        <p class="text-muted mb-0">Manage all documents</p>
    </div>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-cloud-upload"></i> Upload Document
    </a>
</div>

<div class="card">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Search documents...">
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Types</option>
                    <option>Contract</option>
                    <option>Legal Brief</option>
                    <option>Affidavit</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Status</option>
                    <option>Approved</option>
                    <option>Pending</option>
                    <option>Rejected</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Folders</option>
                    <option>Client A</option>
                    <option>Client B</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Document Name</th>
                    <th>Type</th>
                    <th>Folder</th>
                    <th>Uploaded By</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><i class="bi bi-file-pdf text-danger"></i> Contract_Smith.pdf</td>
                    <td>Contract</td>
                    <td>Client A</td>
                    <td>John Doe</td>
                    <td>Jan 20, 2024</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-download"></i></a>
                            <a href="#" class="btn btn-outline-info"><i class="bi bi-pencil"></i></a>
                            <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><i class="bi bi-file-word text-primary"></i> Brief_Case123.docx</td>
                    <td>Legal Brief</td>
                    <td>Client B</td>
                    <td>Jane Smith</td>
                    <td>Jan 18, 2024</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="#" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                            <a href="#" class="btn btn-outline-secondary"><i class="bi bi-download"></i></a>
                            <a href="#" class="btn btn-outline-info"><i class="bi bi-pencil"></i></a>
                            <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
